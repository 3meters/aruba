<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.proxibase.aircandi.activities"
	android:versionName="0.1"
	android:versionCode="1">
	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="9" />
	<supports-screens
		android:smallScreens="true"
		android:normalScreens="true"
		android:largeScreens="true"
		android:anyDensity="true" />
	<application
		android:name="com.proxibase.aircandi.activities.Aircandi"
		android:label="@string/app_name"
		android:icon="@drawable/icon_aircandi"
		android:theme="@style/aircandi_theme.midnight"
		android:debuggable="true">
		<activity
			android:name="CandiSearchActivity"
			android:label="@string/app_name"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".CandiInfo"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="com.aircandi.intent.action.SHOWEntityProxy" />
				<category
					android:name="android.intent.category.DEFAULT" />
				<category
					android:name="com.aircandi.intent.category.PROXIHANDLER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".Post"
			android:label="@string/app_name"
			android:configChanges="orientation">
		</activity>
		<activity
			android:name=".Comment"
			android:label="@string/app_name"
			android:configChanges="orientation">
		</activity>
		<activity
			android:name="com.proxibase.aircandi.activities.Preferences"
			android:theme="@android:style/Theme"
			android:label="@string/app_name"
			android:configChanges="orientation">
			<intent-filter>
				<action
					android:name="com.proxibase.aircandi.activities.Preferences" />
				<category
					android:name="android.intent.category.PREFERENCE" />
			</intent-filter>
		</activity>
	</application>
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission
		android:name="android.permission.INTERNET" />
	<uses-permission
		android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission
		android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission
		android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission
		android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission
		android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission
		android:name="android.permission.UPDATE_DEVICE_STATS" />
	<uses-permission
		android:name="android.permission.WAKE_LOCK" />
	<uses-permission
		android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest>