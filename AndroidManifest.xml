<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aircandi.beta"
    android:installLocation="auto"
    android:versionCode="32"
    android:versionName="0.8.19" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- To support GCM -->

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.aircandi.beta.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.aircandi.beta.permission.C2D_MESSAGE" />

    <!-- Needed to trigger a wifi scan -->

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="com.aircandi.Aircandi"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/name_app"
        android:theme="@style/aircandi_theme_midnight" >

        <!-- Services -->

        <service
            android:name="com.aircandi.ScanService"
            android:enabled="true"
            android:label="@string/name_app" >
        </service>
        <service android:name="com.aircandi.components.GCMIntentService" />

        <!-- Receivers -->

        <receiver android:name="com.aircandi.components.LocationChangedReceiver" />
        <receiver
            android:name="com.aircandi.components.GCMAircandiBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.aircandi.components" />
            </intent-filter>
        </receiver>

        <!-- Activities -->

        <activity
            android:name="com.aircandi.ui.SplashForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_midnight_notitlebar"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aircandi.ui.CandiRadar"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/name_app" >
        </activity>
        <activity
            android:name="com.aircandi.ui.CandiForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/name_app"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.CandiList"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/name_app"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.CommentForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_comment"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.aircandi.ui.CommentList"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_picture_browse"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.TuningWizard"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_tune"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.CandiHelp"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_midnight_transparent"
            android:label="@string/name_app"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.EntityForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/name_app"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.PictureDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_picture_browse"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.FeedbackForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_feedback"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- User activities -->

        <activity
            android:name="com.aircandi.ui.user.CandiUser"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/name_app"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.user.ProfileForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_profile"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.user.SignInForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_signin"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.aircandi.ui.user.RegisterForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_signup"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.user.PasswordForm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/form_title_password"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Builders/pickers -->

        <activity
            android:name="com.aircandi.ui.builders.PicturePicker"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.TemplatePicker"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.PictureSourcePicker"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.LinkPicker"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.UriPicker"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:enabled="false"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.AddressBuilder"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.CategoryBuilder"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.SourcesBuilder"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/aircandi_theme_dialog_dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.aircandi.ui.builders.SourceBuilder"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.Sherlock.Light.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Misc -->

        <activity
            android:name="com.aircandi.ui.Preferences"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/form_title_preferences" >
            <intent-filter>
                <action android:name="com.aircandi.Preferences" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
    </application>

