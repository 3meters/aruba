<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="270"
        android:endColor="@color/background_balloon_end_light"
        android:startColor="@color/background_balloon_start_light" />

    <corners android:radius="@dimen/form_balloon_corner_radius" />

    <stroke
        android:width="@dimen/form_balloon_stroke_width"
        android:color="@color/stroke_balloon_light" />

    <padding
        android:bottom="@dimen/form_balloon_padding"
        android:left="@dimen/form_balloon_padding"
        android:right="@dimen/form_balloon_padding"
        android:top="@dimen/form_balloon_padding" />

</shape>