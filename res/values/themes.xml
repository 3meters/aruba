        <item name="actionModeBackground">?attr/backgroundActionBar</item>
        <item name="android:actionBarStyle">@style/actionbar_light</item>
        <item name="android:actionBarTabBarStyle">@style/actionbar_tabbar_light</item>
        <item name="android:actionModeBackground">?attr/backgroundActionBar</item>

        <!-- Debug UI -->
