        <item name="android:windowBackground">@drawable/wallpaper_misty</item>
    </style>
    
    <!-- Serene Theme -->
	
    <style name="aircandi_theme_serene" parent="aircandi_theme_light_semi">
        <item name="android:windowBackground">@drawable/wallpaper_serene</item>
        <item name="backgroundCandi">@color/background_form_light_semi</item>
    </style>
    
	<!-- Dark Form Theme -->
	
    <style name="aircandi_theme_form_dark" parent="aircandi_theme_dark">
        <item name="backgroundForm">@android:color/black</item>
    </style>
	
	<!-- Light Form Theme -->
	
    <style name="aircandi_theme_form_light" parent="aircandi_theme_light">
        <item name="backgroundForm">@android:color/transparent</item>
	</style>	
    
    <style name="aircandi_theme_dialog_dark" parent="Theme.Sherlock.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textColorBars">@color/text_dark</item>
        <item name="android:backgroundDimAmount">0.2</item>
        
        <item name="themeTone">dark</item>
        <item name="ruleColor">@color/rule_30_dark</item>
        
        <item name="textColor">@color/text_dark</item>
        <item name="backgroundButtonBar">@color/background_buttonbar_dark</item>
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
        <item name="actionBarSize">@dimen/abs__action_bar_default_height</item>
    </style>

