<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Themes 
		For a given theme
		
		Same for every theme
		
		- Global text appearance (except colors)
		- Global button appearance (except colors)
		
		Custom for theme
		
		- Actionbar tone
		- Buttonbar tone
		- Tabbar tone
		- Set window background
		- Select right set of drawables based on the theme tone.
		- Custom line and text colors in pages, forms, buttons.
	-->

    <style name="aircandi_theme_dark" parent="Theme.Sherlock">
        
        <item name="themeTone">dark</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">false</item>
        
        <!-- Default overrides -->
        
        <item name="android:editTextStyle">@style/app_edittext</item>
        <item name="android:textColorHint">@color/edit_hint</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        
        <item name="android:textAppearance">@style/app_text_appearance</item>
        <item name="android:textAppearanceLarge">@style/app_text_appearance_large</item>
        <item name="android:textAppearanceMedium">@style/app_text_appearance_medium</item>
        <item name="android:textAppearanceSmall">@style/app_text_appearance_small</item>
        <item name="candiFormTitleStyle">@style/candi_form_title</item>
        <item name="candiListTitleStyle">@style/candi_list_title</item>
        
        <!-- Text and line colors -->
        
        <item name="ruleColor">@color/rule_30_dark</item>
        <item name="textColor">@color/button_color_selector_dark</item>
        <item name="textColorRadar">@color/text_dark</item>
        <item name="textColorUnfocused">@color/text_dark</item>
        <item name="textColorComment">@color/accent</item>
        <item name="textColorBullet">@color/accent</item>
        <item name="textColorBars">@color/text_dark</item>
        <item name="textColorProgress">@color/text_dark</item>
        <item name="textOutlineRadar">true</item>
        
        <!-- Drawables and backgrounds -->
        
        <item name="textureBodyCandi">@drawable/placeholder_logo</item>
        <item name="textureBodyZone">@raw/trans_30_dark</item>
        
        <item name="backgroundButton">@drawable/button_selector_dark</item>
        <item name="backgroundCandi">@android:color/transparent</item>
        <item name="backgroundForm">@android:color/black</item>
        <item name="backgroundHelp">@color/background_help_dark</item>
        <item name="backgroundPicture">@drawable/picture_bg_dark</item>
        <item name="backgroundProgress">@drawable/progress_bg_dark</item>
        
        <item name="backgroundActionBar">@color/background_actionbar_dark</item>
        <item name="backgroundTabBar">@color/background_tabbar_dark</item>
        <item name="backgroundButtonBar">@color/background_buttonbar_dark</item>
        
        <item name="busy">@drawable/busy_anim_dark</item>
        <item name="logo">@drawable/icon_app</item>
        <item name="iconBookmarks">@drawable/ic_search_dark</item>
        <item name="iconForward">@drawable/icon_forward_dark</item>
        <item name="iconLocation">@drawable/ic_location_dark</item>
        <item name="iconLocked">@drawable/ic_locked_dark</item>
        <item name="iconRefresh">@drawable/icon_refresh_dark</item>
        <item name="iconSearch">@drawable/ic_search_dark</item>
        <item name="iconHelp">@drawable/ic_help_dark</item>
        <item name="iconNewCandi">@drawable/ic_new_candi_dark</item>
        
		<!-- Actionbar Sherlock -->
		
        <item name="actionBarStyle">@style/actionbar_dark</item>
        <item name="actionBarTabBarStyle">@style/actionbar_tabbar_dark</item>
        <item name="buttonBarStyle">@style/actionbar_buttonbar_dark</item>
        <item name="actionModeBackground">?attr/backgroundActionBar</item>
        
        <item name="android:actionBarStyle">@style/actionbar_dark</item>
        <item name="android:actionBarTabBarStyle">@style/actionbar_tabbar_dark</item>
        <item name="android:actionModeBackground">?attr/backgroundActionBar</item>
        
        <!-- Debug UI -->
        
        <item name="backgroundSliderContentInfo">@drawable/slider_content_info_bg_dark</item>
        <item name="backgroundSliderContentSearch">@drawable/slider_content_search_bg_dark</item>
        <item name="backgroundSliderHandleInfo">@drawable/slider_handle_info_bg_dark</item>
        <item name="backgroundSliderHandleSearch">@drawable/slider_handle_search_bg_dark</item>
        <item name="imageSliderHandleInfo">@drawable/gripper_dark</item>
        <item name="imageSliderHandleSearch">@drawable/gripper_dark</item>
        
	</style>

