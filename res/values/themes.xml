    <!-- Midnight Theme -->

    <style name="aircandi_theme_midnight" parent="aircandi_theme_dark" />

    <style name="aircandi_theme_midnight_notitlebar" parent="aircandi_theme_dark">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Snow theme -->

    <style name="aircandi_theme_snow" parent="aircandi_theme_light" />

    <!-- Dialog Themes -->

    <style name="aircandi_theme_dialog_dark" parent="Theme.Sherlock.Dialog">
        <item name="themeTone">dark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        
        <!-- Text and line colors -->

        <item name="android:textColor">@android:color/white</item>
        <item name="textColor">@color/text_dark</item>
        <item name="textColorBars">@color/text_dark</item>
        <item name="textColorButtonLink">@color/accent</item>
        <item name="ruleColor">@color/rule_30_dark</item>
        <item name="ruleColorStrong">@color/rule_60_dark</item>

        <!-- Drawables and backgrounds -->

        <item name="backgroundPictureFramed">@drawable/bg_image_framed_dark</item>
        <item name="backgroundButtonBar">@color/background_buttonbar_dark</item>
        <item name="backgroundButton">@drawable/selector_link_button</item>

        <!-- Actionbar Sherlock -->

        <item name="buttonBarStyle">@style/actionbar_buttonbar_dark</item>
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
        <item name="actionBarSize">@dimen/abs__action_bar_default_height</item>
    </style>

