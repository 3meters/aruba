    <style name="aircandi_theme_light_semi" parent="aircandi_theme_light">
        <item name="backgroundActionBar">@color/background_actionbar_light_semi</item>
        <item name="backgroundTabBar">@color/background_tabbar_light_semi</item>
        <item name="backgroundButtonBar">@color/background_buttonbar_light_semi</item>
    </style>
    
    <style name="aircandi_theme_dark_semi" parent="aircandi_theme_dark">
        <item name="backgroundActionBar">@color/background_actionbar_dark_semi</item>
        <item name="backgroundTabBar">@color/background_tabbar_dark_semi</item>
        <item name="backgroundButtonBar">@color/background_buttonbar_dark_semi</item>
    </style>
    
    <style name="aircandi_theme_light_semi_invert" parent="aircandi_theme_light_semi">
        <item name="textColor">@color/text_dark</item>
        <item name="textColorRadar">@color/text_dark</item>
        <item name="textOutlineRadar">true</item>
        <item name="textColorBars">@color/text_light</item>
        <item name="candiFormTitleStyle">@style/candi_form_title_outlined</item>
        <item name="candiListTitleStyle">@style/candi_list_title_outlined</item>
        <item name="iconLocation">@drawable/ic_location_dark</item>
        <item name="backgroundButton">@drawable/button_selector_dark</item>
        </style>
    
    <!-- Midnight Theme -->
	
    <style name="aircandi_theme_midnight" parent="aircandi_theme_dark"/>
    
	<!-- Smolder Theme -->
	
    <style name="aircandi_theme_smolder" parent="aircandi_theme_dark">
        <item name="android:windowBackground">@drawable/wallpaper_smolder</item>
    </style>

    <!-- Blue Ray Theme -->
    
    <style name="aircandi_theme_blueray" parent="aircandi_theme_dark">
        <item name="android:windowBackground">@drawable/wallpaper_blueray</item>
    </style>

    <!-- Snow theme	-->
	
    <style name="aircandi_theme_snow" parent="aircandi_theme_light_semi">
        <item name="android:windowBackground">@drawable/wallpaper_snow_vii</item>
    </style>
    
    <!-- Lagoon theme	-->
    
    <style name="aircandi_theme_lagoon" parent="aircandi_theme_light_semi_invert">
        <item name="android:windowBackground">@drawable/wallpaper_lagoon</item>
