<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application wide styles -->

    <style name="app_text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="app_text_appearance_large" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="app_text_appearance_medium" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_text_appearance_small" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="app_text_appearance_small_outlined" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="app_text_appearance_micro" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="app_text_appearance_title1" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_text_appearance_title2" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_button">
        <item name="android:minWidth">80dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="app_picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="app_picture_framed" parent="app_picture">
        <item name="android:background">?attr/backgroundPicture</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="app_picture_outlined" parent="app_picture">
        <item name="android:background">?attr/backgroundPicture</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="app_checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="app_edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="app_bullet">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="app_user_fullname" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <style name="app_user_timesince" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <!--
    Actionbar (not currently used or being deprecated) 

    <style name="widget_actionbar_dark" parent="Widget.Sherlock.ActionBar">
        <item name="actionModeBackground">@color/transparent</item>
        <item name="android:actionModeBackground">@color/transparent</item>
    </style>

    <style name="widget_actionbar_light" parent="Widget.Sherlock.Light.ActionBar">
        <item name="actionModeBackground">@color/transparent</item>
        <item name="android:actionModeBackground">@color/transparent</item>
    </style>

    <style name="actionbar_button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/app_button_selector</item>
    </style>


    <style name="actionbar_rule_vertical">
        <item name="android:background">@drawable/app_header_separator</item>
    </style>
    -->

    <style name="actionbar">
        <item name="android:background">?attr/backgroundHeader</item>
    </style>

    <style name="actionbar_title">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColorButtonHeader</item>
    </style>

    <style name="actionbar_logo">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawableLeft">?attr/logo</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/button_nooutline_selector</item>
        <item name="android:textColor">?attr/textColorButtonHeader</item>
    </style>

    <!-- Notifications -->

    <style name="notification_text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="notification_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
         If you want a slightly different color for some text,
         consider using ?android:attr/textColorSecondary
    -->


    <!-- Progress -->

    <style name="progress_body" parent="android:Theme.Dialog">
        <item name="android:windowBackground">?attr/backgroundProgress</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="progress_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Candi Search -->

    <style name="debug_slider_handle">
        <item name="android:src">?attr/imageSliderHandleSearch</item>
        <item name="android:background">?attr/backgroundSliderHandleSearch</item>
    </style>

    <style name="debug_slider_content">
        <item name="android:background">?attr/backgroundSliderContentSearch</item>
    </style>

    <!-- Dialogs -->

    <style name="search_dialog_connect" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="search_dialog_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="dialog_title_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">?attr/textColorButtonHeader</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="dialog_body_layout">
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="dialog_body_text">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Comments -->

    <style name="comments_button" parent="android:Widget.Button">
        <item name="android:textColor">#ffffaa00</item>
        <item name="android:background">@drawable/button_nooutline_selector</item>
    </style>

    <!-- Candi Info -->

    <style name="candi_info_button" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
        <item name="android:textColor">?attr/textColorButton</item>
        <item name="android:background">?attr/backgroundButton</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">65dp</item>
    </style>

    <style name="candi_info_title">
        <item name="android:textAppearance">@style/app_text_appearance_title1</item>
    </style>

    <style name="candi_info_subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="candi_info_description">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="candi_info_slider_handle">
        <item name="android:src">?attr/imageSliderHandleInfo</item>
        <item name="android:background">?attr/backgroundSliderHandleInfo</item>
    </style>

    <style name="candi_info_slider_content">
        <item name="android:background">?attr/backgroundSliderContentInfo</item>
    </style>

    <!-- Candi List -->

    <style name="candi_list_title">
        <item name="android:textAppearance">@style/app_text_appearance_title2</item>
    </style>

    <style name="candi_list_subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="candi_list_description">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="candi_list_button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/app_button_selector</item>
    </style>

    <!-- Bookmark List -->

    <style name="bookmark_list_title">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bookmark_list_uri">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- CandiInfo: Pager Indicator -->

    <style name="candi_info_pager_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Tabs -->

    <style name="form_tab_active">
        <item name="android:background">?attr/tabColorActive</item>
    </style>

    <style name="form_tab_inactive">
        <item name="android:background">?attr/tabColorInactive</item>
    </style>

    <style name="form_tab_background">
        <item name="android:background">?attr/tabColorBackground</item>
    </style>

    <style name="form_tab_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@drawable/button_nooutline_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_tab_rule_vertical">
        <item name="android:background">@drawable/tab_separator</item>
    </style>

    <!-- Aircandi Gallery -->

    <style name="gallery_image_placeholder">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">?attr/backgroundHeader</item>
    </style>

    <!-- Candi Forms -->

    <style name="form_title" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/textColorFormTitle</item>
    </style>

    <style name="form_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_hint">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_error" parent="android:Widget.TextView">
        <item name="android:textColor">#ffff8844</item>
        <item name="android:background">?attr/backgroundHeader</item>
    </style>

    <style name="form_picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?attr/backgroundPicture</item>
        <item name="android:padding">3dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="form_picture_placeholder">
        <item name="android:background">#33ffffff</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="form_footer" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">?attr/activityFooterFormBackground</item>
    </style>

    <!-- Misc -->

    <style name="app_debug_label" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <style name="app_debug_value" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

</resources>