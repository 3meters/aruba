<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application text styles -->


    <!--
    	Android defaults
    	
    	textAppearance: 16sp
    	textAppearanceLarge: 22sp
    	textAppearanceMedium: 18sp
    	textAppearanceSmall: 14sp 
    	textAppearanceSearchResultTitle: 18sp
    	textAppearanceSearchResultSubtitle: 14sp
    	textAppearanceButton: 14sp
    	
    	dialogWindowTitle: 18sp
    	tabWidget: 14sp
    	popupMenu: 18sp
    	popupMenuLarge: 22sp
    	popupMenuSmall: 14sp
    	dropDownHint: 14sp
    	windowTitle: 14sp
    	holoActionBarTabText: 12sp
    	holoButtonBorderlessSmall: 14sp
    -->

    <style name="textAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="textAppearanceExtraLarge" parent="textAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textAppearanceLarge" parent="textAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textAppearanceMedium" parent="textAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textAppearanceSmall" parent="textAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textAppearanceExtraSmall" parent="textAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textAppearanceTiny" parent="textAppearance">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- App wide styles -->

    <style name="text_view" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:paddingLeft">2dp</item>
    </style>
    
    <style name="picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="picture_framed" parent="picture">
        <item name="android:background">?attr/backgroundPictureFramed</item>
        <item name="android:padding">3dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="picture_framed_thick" parent="picture">
        <item name="android:background">?attr/backgroundPictureFramed</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="balloon">
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">?attr/backgroundBalloon</item>
    </style>

    <style name="bullet">
        <item name="android:textColor">?attr/textColorBullet</item>
    </style>

    <style name="notification_text">
        <item name="android:textAppearance">?attr/textAppearanceExtraSmall</item>
    </style>

    <style name="notification_title">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_content_layout">
        <item name="android:paddingBottom">@dimen/form_body_padding</item>
        <item name="android:paddingLeft">@dimen/form_body_padding</item>
        <item name="android:paddingRight">@dimen/form_body_padding</item>
        <item name="android:paddingTop">@dimen/form_body_padding_top</item>
    </style>

    <style name="dialog_content_layout">
        <item name="android:paddingBottom">@dimen/dialog_body_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_body_padding</item>
        <item name="android:paddingRight">@dimen/dialog_body_padding</item>
        <item name="android:paddingTop">@dimen/dialog_body_padding_top</item>
    </style>

    <!-- Edit forms -->
    <style name="form_title" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="form_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_label_fancy">
        <item name="android:textAppearance">?attr/textAppearanceTiny</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_text">
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_text_small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_button">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:paddingLeft">@dimen/form_button_padding</item>
        <item name="android:paddingRight">@dimen/form_button_padding</item>
        <item name="android:minHeight">@dimen/form_button_height</item>
        <item name="android:background">?attr/backgroundButton</item>
        <item name="android:textColor">?attr/textColorButtonLink</item>
    </style>

    <style name="form_button_floating" parent="form_button">
        <item name="android:minHeight">@dimen/form_button_height</item>
        <item name="android:minWidth">@dimen/form_button_floating_width_min</item>
    </style>

    <style name="form_button_borderless" parent="Widget.Sherlock.ActionButton">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="form_edit" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="form_picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="form_picture_placeholder">
        <item name="android:background">#33ffffff</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="form_checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="form_spinner" parent="Widget.Sherlock.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="form_spinner_item" parent="Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="form_text_placeholder">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">?attr/backgroundTabBar</item>
    </style>

    <!-- Splash -->

    <style name="splash_title">
        <item name="android:textAppearance">?attr/textAppearanceExtraLarge</item>
    </style>

    <style name="splash_message">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <!-- Candi forms -->

    <style name="candi_user" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceExtraSmall</item>
    </style>

    <style name="candi_form_section">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Actionbar -->

    <style name="actionbar_dark" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">?attr/backgroundActionBar</item>
        <item name="background">?attr/backgroundActionBar</item>
    </style>

    <style name="actionbar_light" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">?attr/backgroundActionBar</item>
        <item name="background">?attr/backgroundActionBar</item>
    </style>

    <style name="actionbar_tabbar_dark" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundTabBar</item>
        <item name="background">?attr/backgroundTabBar</item>
    </style>

    <style name="actionbar_tabbar_light" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundTabBar</item>
        <item name="background">?attr/backgroundTabBar</item>
    </style>

    <style name="actionbar_buttonbar_dark" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundButtonBar</item>
        <item name="background">?attr/backgroundButtonBar</item>
    </style>

    <style name="actionbar_buttonbar_light" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundButtonBar</item>
        <item name="background">?attr/backgroundButtonBar</item>
    </style>

    <style name="actionbar_beacons">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="actionbar_debug">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

</resources>