<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application text styles -->

    <style name="app_text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="app_text_appearance_outlined" parent="app_text_appearance">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="app_text_appearance_large" parent="app_text_appearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="app_text_appearance_medium" parent="app_text_appearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_text_appearance_small" parent="app_text_appearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="app_text_appearance_outlined_small" parent="app_text_appearance_outlined">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="app_text_appearance_micro" parent="app_text_appearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="app_text_appearance_tiny" parent="app_text_appearance">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="app_text_appearance_title1" parent="app_text_appearance_large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_text_appearance_title2" parent="app_text_appearance_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Application widgets -->
    
    <style name="candi_user" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>
    
    <style name="candi_form_title">
        <item name="android:textAppearance">@style/app_text_appearance_title1</item>
    </style>

    <style name="candi_form_title_outlined">
        <item name="android:textAppearance">@style/app_text_appearance_title1</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="candi_form_subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="candi_form_description">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="candi_list_title">
        <item name="android:textAppearance">@style/app_text_appearance_title2</item>
    </style>
    
    <style name="candi_list_section">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@color/background_tabbar_light</item>
        </style>
    
    <style name="candi_list_title_outlined">
        <item name="android:textAppearance">@style/app_text_appearance_title2</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
    
    <style name="candi_list_subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="candi_list_description">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="bookmark_list_title">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bookmark_list_uri">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="app_picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="app_picture_framed" parent="app_picture">
        <item name="android:background">?attr/backgroundPicture</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="app_checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="app_edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="app_bullet">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/textColorBullet</item>
    </style>

    <style name="app_button_square" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:background">?attr/backgroundButton</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">65dp</item>
    </style>

    <style name="button_comments" parent="android:Widget.Button">
        <item name="android:textColor">?attr/textColorComment</item>
        <item name="android:background">@drawable/button_nooutline_selector</item>
    </style>
    
    <style name="list_loading_placeholder">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">?attr/backgroundTabBar</item>
    </style>

    <!-- Actionbar -->

    <style name="actionbar_dark" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">?attr/backgroundActionBar</item>
        <item name="background">?attr/backgroundActionBar</item>
    </style>

    <style name="actionbar_light" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">?attr/backgroundActionBar</item>
        <item name="background">?attr/backgroundActionBar</item>
    </style>
    
    <style name="actionbar_tabbar_dark" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundTabBar</item>
        <item name="background">?attr/backgroundTabBar</item>
    </style>

    <style name="actionbar_tabbar_light" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundTabBar</item>
        <item name="background">?attr/backgroundTabBar</item>
    </style>
    
    <style name="actionbar_buttonbar_dark" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundButtonBar</item>
        <item name="background">?attr/backgroundButtonBar</item>
    </style>

    <style name="actionbar_buttonbar_light" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">?attr/backgroundButtonBar</item>
        <item name="background">?attr/backgroundButtonBar</item>
    </style>
    
    <style name="actionbar_button_borderless" parent="Widget.Sherlock.ActionButton">
        <item name="android:textColor">?attr/textColorBars</item>
        <item name="android:textAppearance">@style/app_text_appearance_small</item>
	</style>

    <style name="actionbar_title">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="actionbar_beacons">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="actionbar_logo">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawableLeft">?attr/logo</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/button_nooutline_selector</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="actionbar_button">
        <item name="android:minWidth">80dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColor</item>
        </style>

    <!-- Candi Forms -->

    <style name="form_title" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="form_label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_hint">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="form_picture">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?attr/backgroundPicture</item>
        <item name="android:padding">3dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="form_picture_placeholder">
        <item name="android:background">#33ffffff</item>
        <item name="android:padding">3dp</item>
    </style>

    <!--
         If you want a slightly different color for some text,
         consider using ?android:attr/textColorSecondary
    -->

    <!-- Progress -->

    <style name="progress_body" parent="android:Theme.Dialog">
        <item name="android:windowBackground">?attr/backgroundProgress</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="progress_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColorProgress</item>
    </style>

    <!-- Dialogs -->

    <style name="dialog_radar_connect" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="dialog_radar_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Notifications: used in status bar -->

    <style name="notification_text">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <style name="notification_title">
        <item name="android:textAppearance">@style/app_text_appearance_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Misc -->

    <style name="app_debug_label" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <style name="app_debug_value" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/app_text_appearance_micro</item>
    </style>

    <style name="debug_slider_handle">
        <item name="android:src">?attr/imageSliderHandleSearch</item>
        <item name="android:background">?attr/backgroundSliderHandleSearch</item>
    </style>

    <style name="debug_slider_content">
        <item name="android:background">?attr/backgroundSliderContentSearch</item>
    </style>

</resources>