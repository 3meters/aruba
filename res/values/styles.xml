<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="AircandiTheme" parent="@android:style/Theme">
		<item name="android:windowNoTitle">true</item>	
		<item name="android:windowBackground">@drawable/wallpaper7</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	
	<style
		name="AircandiDialogTheme" parent="@android:style/Theme.Dialog">
		<item name="android:windowIsTranslucent">true</item>    
		<item name="android:windowContentOverlay">@null</item>    
		<item name="android:windowNoTitle">true</item>    
		<item name="android:windowIsFloating">true</item>    
		<item name="android:windowBackground">@android:color/transparent</item>	
	</style>
	
	<style
		name="AircandiTheme.NoWallpaper">
		<item name="android:windowNoTitle">true</item>	
		<item name="android:windowBackground">@drawable/wallpaper_bg</item>
	</style>
	
	<style
		name="Application_Row">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:stretchColumns">0</item>
		<item name="android:background">@drawable/application_header_bg</item>		
	</style>
	
	<style
		name="Application_Title">		
		<item name="android:textSize">@dimen/application_titlebar_text</item>		
		<item name="android:textColor">@color/application_titlebar_text</item>		
		<item name="android:textStyle">normal</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_gravity">left|center_vertical</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingTop">6dp</item>	
		<item name="android:paddingBottom">6dp</item>	
		<item name="android:paddingLeft">6dp</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:background">@drawable/application_button_selector</item>
		<item name="android:clickable">true</item>
		<item name="android:onClick">onHomeClick</item>
	</style>
	
	<style
		name="Application_Footer">		
		<item name="android:textSize">@dimen/application_titlebar_text</item>		
		<item name="android:textColor">@color/application_titlebar_text</item>		
		<item name="android:textStyle">normal</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_gravity">left|center_vertical</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingTop">6dp</item>	
		<item name="android:paddingBottom">6dp</item>	
		<item name="android:paddingLeft">6dp</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:background">@drawable/application_button_selector</item>
	</style>
	
	<style
		name="Application_Button">
		<item name="android:layout_width">@dimen/application_button_width</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:minWidth">80dp</item>
		<item name="android:paddingTop">10dp</item>	
		<item name="android:paddingBottom">10dp</item>	
		<item name="android:background">@drawable/application_button_selector</item>
	</style>
	
	<style
		name="Application_Button_Separator">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">@dimen/application_button_separator_width</item>
		<item name="android:background">@drawable/application_header_separator</item>
	</style>
	
	<style
		name="Application_Progress">
		<item name="android:layout_width">22dp</item>
		<item name="android:layout_height">22dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:minHeight">22dp</item>
		<item name="android:minWidth">22dp</item>
		<item name="android:maxHeight">22dp</item>
		<item name="android:maxWidth">22dp</item>
		<item name="android:background">@android:color/transparent</item>
	</style>
	
	<style
		name="Normal_Text"
		parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/normal_text</item>
		<item name="android:textColor">@color/normal_text</item>
	</style>
	
	<style
		name="Small_Text"
		parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/small_text</item>
		<item name="android:textColor">@color/normal_text</item>
	</style>
	
	<style
		name="Normal_Text_Reversed"
		parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/normal_text</item>
		<item name="android:textColor">@color/normal_text_reversed</item>
	</style>
	
	<style
		name="Small_Text_Reversed"
		parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/small_text</item>
		<item name="android:textColor">@color/normal_text_reversed</item>
	</style>
	
	<style
		name="Form_Input">
		<item name="android:textSize">@dimen/form_value_text</item>		
		<item name="android:textColor">@color/form_input_text</item>		
		<item name="android:gravity">left|center_vertical</item>	
		<item name="android:layout_height">wrap_content</item>	
		<item name="android:layout_width">wrap_content</item>	
	</style>
	
	
</resources>