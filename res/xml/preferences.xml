<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Finder preferences">
		<CheckBoxPreference
			android:id="@+id/Pref_Ripple_Spots_Only"
			android:key="Pref_Ripple_Spots_Only"
			android:defaultValue="true"
			android:title="Ripple spots only"
			android:summary="Only show registered ripple spots" />
		<ListPreference
			android:id="@+id/Pref_Display_Extras"
			android:key="Pref_Display_Extras"
			android:defaultValue="none"
			android:title="Display extras"
			android:summary="Show extra info in the spot caption"
			android:entries="@array/displayextras_list_preference"
			android:entryValues="@array/displayextrasvalues_list_preference"
			android:dialogTitle="Select extra" />
		<EditTextPreference
			android:id="@+id/Pref_Level_Cutoff"
			android:key="Pref_Level_Cutoff"
			android:defaultValue="-100"
			android:title="Level cutoff"
			android:summary="Minimum average signal level required for display"
			android:dialogTitle="Enter signal level" />
		<CheckBoxPreference
			android:id="@+id/Pref_Autoscan"
			android:key="Pref_Autoscan"
			android:defaultValue="true"
			android:title="Autoscan"
			android:summary="Scan for ripple spots at regular intervals" />
		<EditTextPreference
			android:id="@+id/Pref_Autoscan_Interval"
			android:key="Pref_Autoscan_Interval"
			android:defaultValue="5000"
			android:dependency="Pref_Autoscan"
			android:layout="?android:attr/preferenceLayoutChild"
			android:title="Autoscan interval"
			android:summary="Interval in milliseconds between autoscans"
			android:dialogTitle="Enter autoscan interval" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Development preferences">
		<CheckBoxPreference
			android:id="@+id/Pref_Show_Config_Menu"
			android:key="Pref_Show_Config_Menu"
			android:defaultValue="true"
			android:title="Configuration menu item"
			android:summary="Show menu option for configuring spots" />
	</PreferenceCategory>
</PreferenceScreen>