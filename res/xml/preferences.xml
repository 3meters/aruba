<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_search_category_title" >
        <ListPreference
            android:id="@+id/Pref_Search_Radius"
            android:defaultValue="8047"
            android:dialogTitle="@string/pref_search_radius_dialog_title"
            android:entries="@array/search_radius_entries"
            android:entryValues="@array/search_radius_values"
            android:key="Pref_Search_Radius"
            android:negativeButtonText="@string/pref_dialog_cancel"
            android:positiveButtonText="@string/pref_dialog_ok"
            android:summary="@string/pref_search_radius_summary"
            android:title="@string/pref_search_radius_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_general_category_title" >
        <ListPreference
            android:id="@+id/Pref_Theme"
            android:defaultValue="aircandi_theme_midnight"
            android:dialogTitle="@string/pref_theme_dialog_title"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            android:key="Pref_Theme"
            android:negativeButtonText="@string/pref_dialog_cancel"
            android:positiveButtonText="@string/pref_dialog_ok"
            android:summary="@string/pref_theme_summary"
            android:title="@string/pref_theme_title" />

        <CheckBoxPreference
            android:id="@+id/Pref_Sound_Effects"
            android:defaultValue="true"
            android:key="Pref_Sound_Effects"
            android:summary="@string/pref_sound_effects_summary"
            android:title="@string/pref_sound_effects_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_reporting_category_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="acra.enable"
            android:summaryOff="@string/pref_acra_disabled"
            android:summaryOn="@string/pref_acra_enabled"
            android:title="@string/pref_disable_acra" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="acra.syslog.enable"
            android:summaryOff="@string/pref_acra_syslog_disabled"
            android:summaryOn="@string/pref_acra_syslog_enabled"
            android:title="@string/pref_acra_syslog" />

        <EditTextPreference
            android:key="acra.user.email"
            android:summary="@string/pref_acra_user_email_summary"
            android:title="@string/pref_acra_user_email" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="acra.alwaysaccept"
            android:summaryOff="@string/pref_acra_alwaysaccept_disabled"
            android:summaryOn="@string/pref_acra_alwaysaccept_enabled"
            android:title="@string/pref_acra_alwaysaccept" />
    </PreferenceCategory>

</PreferenceScreen>