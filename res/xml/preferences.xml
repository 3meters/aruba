<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Search preferences">
		<CheckBoxPreference
			android:key="Pref_Autoscan"
			android:defaultValue="false"
			android:title="Autoscan"
			android:summary="Scan for candi at regular intervals"
			android:id="@+id/Pref_Autoscan" />
		<EditTextPreference
			android:key="Pref_Autoscan_Interval"
			android:defaultValue="5000"
			android:dependency="Pref_Autoscan"
			android:layout="?android:attr/preferenceLayoutChild"
			android:title="Autoscan interval"
			android:summary="Interval in milliseconds between autoscans"
			android:dialogTitle="Enter autoscan interval"
			android:id="@+id/Pref_Autoscan_Interval" />
		<ListPreference
			android:defaultValue="aircandi_theme.blueray"
			android:summary="Choose a theme"
			android:entries="@array/theme_list_preference"
			android:entryValues="@array/themevalues_list_preference"
			android:dialogTitle="Select theme"
			android:id="@+id/Pref_Theme"
			android:key="Pref_Theme"
			android:positiveButtonText="OK"
			android:negativeButtonText="Cancel"
			android:title="Themes" />
		<CheckBoxPreference
			android:key="Pref_Sound_Effects"
			android:defaultValue="true"
			android:title="Sounds"
			android:summary="Play sound notifications and effects"
			android:id="@+id/Pref_Sound_Effects" />
		<CheckBoxPreference
			android:id="@+id/Pref_Global_Beacons"
			android:key="Pref_Global_Beacons"
			android:defaultValue="true"
			android:title="Aircandi feed"
			android:summary="Show Aircandi feed" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Development preferences">
		<CheckBoxPreference
			android:id="@+id/Pref_Demo_Mode"
			android:key="Pref_Demo_Mode"
			android:defaultValue="false"
			android:title="Demo Mode"
			android:summary="Add special beacons with demo entities" />
		<CheckBoxPreference
			android:id="@+id/Pref_Entity_Fencing"
			android:key="Pref_Entity_Fencing"
			android:defaultValue="true"
			android:title="Entity fencing"
			android:summary="Use fence settings to filter entities" />
		<ListPreference
			android:id="@+id/Pref_Display_Extras"
			android:key="Pref_Display_Extras"
			android:defaultValue="None"
			android:title="Display extras"
			android:summary="Show extra info in the entity title"
			android:entries="@array/displayextras_list_preference"
			android:entryValues="@array/displayextrasvalues_list_preference"
			android:dialogTitle="Select extra" />
		<CheckBoxPreference
			android:id="@+id/Pref_Show_Debug"
			android:key="Pref_Show_Debug"
			android:defaultValue="false"
			android:title="Debug Stats"
			android:summary="Show debug stats footer" />
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Error reporting">
		<CheckBoxPreference
			android:key="acra.enable"
			android:title="@string/pref_disable_acra"
			android:summaryOn="@string/pref_acra_enabled"
			android:summaryOff="@string/pref_acra_disabled"
			android:defaultValue="true" />
		<CheckBoxPreference
			android:key="acra.syslog.enable"
			android:summaryOn="@string/pref_acra_syslog_enabled"
			android:summaryOff="@string/pref_acra_syslog_disabled"
			android:title="@string/pref_acra_syslog"
			android:defaultValue="false" />
		<EditTextPreference
			android:key="acra.user.email"
			android:title="@string/pref_acra_user_email"
			android:summary="@string/pref_acra_user_email_summary" />
		<CheckBoxPreference
			android:key="acra.alwaysaccept"
			android:title="@string/pref_acra_alwaysaccept"
			android:summaryOn="@string/pref_acra_alwaysaccept_enabled"
			android:summaryOff="@string/pref_acra_alwaysaccept_disabled"
			android:defaultValue="false" />
	</PreferenceCategory>
</PreferenceScreen>