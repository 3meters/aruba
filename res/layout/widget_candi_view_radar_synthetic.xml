<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:id="@+id/candi_view_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/candi_view_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        aircandi:layout="@layout/widget_webimageview_candi_view"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/candi_view_title"
        style="@style/candi_view_name_synthetic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="3"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="@string/dummy_title_short" />

    <TextView
        android:id="@+id/candi_view_distance"
        style="@style/candi_view_distance_synthetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:text="@string/dummy_distance" />

</RelativeLayout>