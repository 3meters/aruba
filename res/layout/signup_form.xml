<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/backgroundCandiInfo" >

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!-- Header -->

    <RelativeLayout
        android:id="@+id/activity_header"
        style="@style/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/btn_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="?attr/logo" />

        <TextView
            android:id="@+id/text_header_title"
            style="@style/form_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_logo"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/form_title_signup" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:layout_below="@id/activity_header"
        android:layout_weight="1"
        android:fillViewport="true" >

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|top"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp" >

            <!-- User picture -->

            <TextView
                style="@style/form_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_label_picture" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <com.proxibase.aircandi.widgets.WebImageView
                    android:id="@+id/image_picture"
                    style="@style/form_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:tag="resource:placeholder_user" />

                <Button
                    android:id="@+id/btn_change_public_image"
                    style="@style/app_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_picture"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image_picture"
                    android:onClick="onChangePictureButtonClick"
                    android:text="@string/form_button_change_picture" />
            </RelativeLayout>

            <!-- Full name -->

            <TextView
                style="@style/form_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_label_fullname" />

            <EditText
                android:id="@+id/text_fullname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/form_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_label_email" />

            <EditText
                android:id="@+id/text_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/form_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_label_password" />

            <EditText
                android:id="@+id/text_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

            <TextView
                style="@style/form_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_label_password_confirm" />

            <EditText
                android:id="@+id/text_password_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="@style/form_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_signup"
            style="@style/app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSignUpButtonClick"
            android:text="@string/form_button_signup" />

        <Button
            style="@style/app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCancelButtonClick"
            android:text="@string/form_button_cancel" />
    </LinearLayout>

</RelativeLayout>