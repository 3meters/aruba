<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <!-- Content -->

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- Type -->

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:text="@string/dummy_name"
                android:textColor="@color/accent_blue"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/type_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog"
                android:visibility="gone" />

            <!-- Photo -->

            <LinearLayout
                android:id="@+id/photo_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="0"
                android:visibility="visible"
                tools:ignore="InefficientWeight" >

                <com.aircandi.ui.widgets.AirImageView
                    android:id="@+id/photo"
                    style="@style/picture_framed"
                    android:layout_width="@dimen/image_medium"
                    android:layout_height="@dimen/image_medium"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    aircandi:layout="@layout/widget_webimageview_candi_view"
                    aircandi:showBusy="true"
                    aircandi:sizeHint="@dimen/image_medium"
                    android:clickable="true"
                    android:minWidth="@dimen/image_medium"
                    android:onClick="onChangePhotoButtonClick"
                    android:scaleType="centerCrop" />

                <com.aircandi.ui.widgets.AirButton
                    style="@style/form_button_floating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:onClick="onChangePhotoButtonClick"
                    android:text="@string/form_button_change_picture" />
            </LinearLayout>

            <!-- Title and Content -->

            <LinearLayout
                android:id="@+id/name_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical" >

                <com.aircandi.ui.widgets.AirLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/form_label_applink_edit_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/textColorSecondary" />

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:drawableRight="?attr/iconClear"
                    android:inputType="textCapWords|textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_id_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.aircandi.ui.widgets.AirLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/form_label_applink_edit_app_id"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/textColorSecondary" />

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/app_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:drawableRight="?attr/iconClear"
                    android:inputType="textNoSuggestions" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_url_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <com.aircandi.ui.widgets.AirLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/form_label_applink_edit_app_url"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?attr/textColorSecondary" />

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/app_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:drawableRight="?attr/iconClear"
                    android:inputType="textMultiLine|textNoSuggestions|textUri"
                    android:lines="2"
                    android:maxLines="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/created_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/edited_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>