<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/candi_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <!-- Body -->

    <com.aircandi.ui.widgets.BounceScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="?attr/backgroundCandi"
        android:fillViewport="true"
        tools:ignore="UselessParent" >

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.aircandi.ui.widgets.UserView
                    android:id="@+id/created_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    aircandi:layout="@layout/widget_user_view_large_image"
                    android:background="?attr/backgroundButton"
                    android:clickable="true"
                    android:minWidth="80dp"
                    android:onClick="onUserClick" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="false"
                    android:orientation="vertical" >

                    <include
                        android:id="@+id/candi_form_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        layout="@layout/widget_candi_header_compact" />

                    <com.aircandi.ui.widgets.SectionLayout
                        android:id="@+id/section_description"
                        style="@style/candi_form_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        aircandi:layoutHeader="@layout/temp_section_header"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/candi_form_description"
                            style="@style/candi_form_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_description"
                            android:visibility="visible" />
                    </com.aircandi.ui.widgets.SectionLayout>

                    <com.aircandi.ui.widgets.SectionLayout
                        android:id="@+id/section_layout_switchboard"
                        style="@style/candi_form_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        aircandi:layoutHeader="@layout/temp_section_header"
                        android:orientation="vertical" >

                        <com.aircandi.ui.widgets.FlowLayout
                            android:id="@+id/flow_switchboard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.aircandi.ui.widgets.SectionLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>