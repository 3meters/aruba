<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/panel_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/cbo_visibility"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/post_visibility_values_list"
            android:prompt="@string/post_visibility" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/post_password_hint"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/chk_html_zoom"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/form_setting_html_zoom" />
        
        <CheckBox
            android:id="@+id/chk_html_javascript"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/form_setting_javascript" />
        
        <CheckBox
            android:id="@+id/chk_locked"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/post_locked" />
        
        </LinearLayout>

</merge>