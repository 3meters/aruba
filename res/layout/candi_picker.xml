    <!-- Tabs -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/activity_header"
        android:background="?attr/ruleColor" />

    <LinearLayout
        android:id="@+id/form_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_header" >

        <include layout="@layout/temp_tabs_candi_picker" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/flipper_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:layout_below="@+id/form_tabs"
        android:clipChildren="false"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <ListView
            android:id="@+id/list_radar_candi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?attr/backgroundCandiInfo"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" >

            <!-- Preview: listitem=@layout/temp_listitem_candi_picker -->
        </ListView>

        <ListView
            android:id="@+id/list_user_candi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?attr/backgroundCandiInfo"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" >

            <!-- Preview: listitem=@layout/temp_listitem_candi_picker -->
        </ListView>
    </ViewFlipper>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="@style/form_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            style="@style/app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:onClick="onCancelButtonClick"
            android:text="@string/form_button_cancel" />
    </LinearLayout>

</RelativeLayout>