<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout
		android:id="@+id/AppHeader"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true">
		<include
			layout="@layout/temp_application_header" />
	</LinearLayout>
	<FrameLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@id/AppHeader">
		<WebView
			android:id="@+id/WebView"
			android:visibility="invisible"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:scrollbars="none" />
		<org.anddev.andengine.opengl.view.RenderSurfaceView
			android:id="@+id/RenderSurfaceView"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent" />
	</FrameLayout>
	<LinearLayout
		android:id="@+id/AppFooter"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true">
		<include
			layout="@layout/temp_application_footer" />
	</LinearLayout>
</RelativeLayout>