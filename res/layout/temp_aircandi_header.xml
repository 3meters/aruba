<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.proxibase.aircandi" >

    <RelativeLayout
        style="@style/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <LinearLayout
            android:id="@+id/btn_logo"
            style="@style/actionbar_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/group_refresh"
            android:background="@drawable/button_nooutline_selector"
            android:clickable="true"
            android:onClick="onHomeClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="?attr/logo" />

            <TextView
                style="@style/actionbar_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/app_name" />
        </LinearLayout>
        <!--
        <Button
            android:id="@+id/btn_logo"
            style="@style/actionbar_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/group_refresh"
            android:clickable="true"
            android:drawableLeft="?attr/logo"
            android:drawablePadding="5dp"
            android:onClick="onHomeClick"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="@string/app_name" />
        -->

        <View
            style="@style/actionbar_rule_vertical"
            android:layout_width="@dimen/application_button_separator_width"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/group_refresh" />

        <RelativeLayout
            android:id="@+id/group_refresh"
            style="@style/actionbar_button"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/image_user"
            android:clickable="true"
            android:onClick="onRefreshClick" >

            <ImageView
                android:id="@+id/image_progress_indicator"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="?attr/busy"
                android:maxHeight="22dp"
                android:maxWidth="22dp"
                android:minHeight="22dp"
                android:minWidth="22dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image_refresh_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="?attr/iconRefresh" />
        </RelativeLayout>

        <!--
        <View
            style="@style/actionbar_rule_vertical"
            android:layout_width="@dimen/application_button_separator_width"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/image_action_button" />
        <LinearLayout
            android:id="@+id/image_action_button"
            style="@style/actionbar_button"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/image_user"
            android:clickable="true"
            android:onClick="onActionsClick" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/iconSearchActions" />
        </LinearLayout>
        -->

        <View
            style="@style/actionbar_rule_vertical"
            android:layout_width="@dimen/application_button_separator_width"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/image_user" />

        <com.proxibase.aircandi.widgets.WebImageView
            android:id="@+id/image_user"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            aircandi:busyWidth="30dp"
            android:clickable="true"
            aircandi:layout="@layout/temp_webimageview"
            android:onClick="onProfileClick"
            android:scaleType="centerCrop"
            aircandi:showBusy="true" />
    </RelativeLayout>

</merge>