<view
	xmlns:android="http://schemas.android.com/apk/res/android"
	class="com.proxibase.aircandi.widgets.QuickContactWindow$RootLayout"
	android:id="@+id/root"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">
	<HorizontalScrollView
		android:id="@+id/scroll"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/arrow_up"
		android:fadingEdgeLength="0dp"
		android:background="?attr/actionStripBackground"
		android:scrollbars="none">
		<LinearLayout
			android:id="@+id/track_set"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:orientation="horizontal">
		</LinearLayout>
	</HorizontalScrollView>
	<ImageView
		android:id="@+id/arrow_up"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="-1dip"
		android:layout_marginRight="10dp"
		android:layout_alignRight="@id/scroll"
		android:src="@drawable/quickcontact_arrow_up" />
	<ImageView
		android:id="@+id/arrow_down"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginTop="-1dip"
		android:layout_marginRight="10dp"
		android:layout_below="@id/scroll"
		android:layout_alignRight="@id/scroll"
		android:src="@drawable/quickcontact_arrow_down" />
</view>