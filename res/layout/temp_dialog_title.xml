<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/name"
        style="@style/app_text_appearance_large_accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/abs__alert_dialog_title_height"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/dummy_section_title"
        android:visibility="visible" />

    <View
        android:id="@+id/abs__titleDivider"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/abs__holo_blue_light" 
        android:visibility="gone"/>

</LinearLayout>