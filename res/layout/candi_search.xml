<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/activity_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include layout="@layout/temp_aircandi_header" />
    </LinearLayout>

    <!-- Tabs -->

    <LinearLayout
        android:id="@+id/form_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_header" >

        <include layout="@layout/temp_aircandi_tabs" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/form_tabs" >

        <RelativeLayout
            android:id="@+id/retry_dialog"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <RelativeLayout
                style="@style/search_dialog_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="25dp" >

                <TextView
                    android:id="@+id/retry_message"
                    style="@style/search_dialog_text"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingBottom="15dp" />

                <LinearLayout
                    android:id="@+id/group_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/retry_message"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/button_retry"
                        style="@style/app_button"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="@string/dialog_network_retry_button" />

                    <Button
                        android:id="@+id/button_cancel"
                        style="@style/app_button"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="@string/dialog_network_cancel_button" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/wifi_enabled_checkbox"
                    style="@style/app_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_buttons"
                    android:layout_centerHorizontal="true"
                    android:text="@string/dialog_network_enable_wifi_checkbox" />
            </RelativeLayout>
        </RelativeLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scrollbars="none"
            android:visibility="invisible" />

        <org.anddev.andengine.opengl.view.RenderSurfaceView
            android:id="@+id/view_rendersurface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/slider_wrapper_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" >

        <SlidingDrawer
            android:id="@+id/slider_drawer_search"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:content="@+id/search_slider_content"
            android:handle="@+id/search_slider_handle" >

            <LinearLayout
                android:id="@+id/search_slider_handle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="30dp" >

                <ImageButton
                    style="@style/search_slider_handle"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_slider_content"
                style="@style/search_slider_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >
            </RelativeLayout>
        </SlidingDrawer>
    </FrameLayout>

</RelativeLayout>