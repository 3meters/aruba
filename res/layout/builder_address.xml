<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            style="@style/dialog_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_address_hint"
                android:inputType="textPostalAddress"
                android:textAppearance="@style/app_text_appearance_small" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_city_hint"
                android:inputType="textCapWords|textNoSuggestions"
                android:nextFocusDown="@+id/state"
                android:textAppearance="@style/app_text_appearance_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_weight="1"
                    android:hint="@string/form_state_hint"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:nextFocusDown="@+id/zip_code"
                    android:textAppearance="@style/app_text_appearance_small" />

                <EditText
                    android:id="@+id/zip_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_weight="1"
                    android:hint="@string/form_zipcode_hint"
                    android:inputType="number"
                    android:nextFocusDown="@+id/phone"
                    android:textAppearance="@style/app_text_appearance_small" />
            </LinearLayout>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_phone_hint"
                android:inputType="phone"
                android:textAppearance="@style/app_text_appearance_small" />
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>