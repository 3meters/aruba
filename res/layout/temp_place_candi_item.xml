<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        aircandi:layout="@layout/widget_webimageview_framed"
        aircandi:maxHeight="100dp"
        aircandi:maxWidth="100dp"
        aircandi:showBusy="true"
        android:background="@drawable/app_image_selector"
        android:clickable="true"
        android:onClick="onCandiClick"
        android:scaleType="centerCrop" />

</LinearLayout>