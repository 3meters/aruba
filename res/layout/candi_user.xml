<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:orientation="vertical" >

            <!-- User picture -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <com.aircandi.ui.widgets.WebImageView
                    android:id="@+id/photo"
                    android:layout_width="@dimen/form_button_width_min"
                    android:layout_height="@dimen/form_button_width_min"
                    aircandi:layout="@layout/widget_webimageview_framed"
                    aircandi:sizeHint="@dimen/form_button_width_min"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <com.aircandi.ui.widgets.ComboButton
                    android:id="@+id/button_like"
                    style="@style/form_button"
                    android:layout_width="@dimen/form_button_width_min"
                    android:layout_height="@dimen/form_button_height"
                    android:layout_marginRight="3dp"
                    aircandi:drawable="?attr/iconLike"
                    aircandi:label="@string/candi_button_like"
                    android:minWidth="@dimen/form_button_width_min"
                    android:onClick="onLikeButtonClick"
                    android:visibility="gone" />

                <com.aircandi.ui.widgets.ComboButton
                    android:id="@+id/button_watch"
                    style="@style/form_button"
                    android:layout_width="@dimen/form_button_width_min"
                    android:layout_height="@dimen/form_button_height"
                    aircandi:drawable="?attr/iconWatch"
                    aircandi:label="@string/candi_button_watch"
                    android:minWidth="@dimen/form_button_width_min"
                    android:onClick="onWatchButtonClick"
                    android:visibility="gone" />
            </LinearLayout>

            <com.aircandi.ui.widgets.SectionLayout
                android:id="@+id/section_details"
                style="@style/candi_form_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                aircandi:layoutHeader="@layout/temp_section_header"
                android:orientation="vertical"
                android:visibility="gone" >

                <!-- Full name -->

                <TextView
                    android:id="@+id/name"
                    style="@style/app_text_appearance_large_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Location -->

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Web link -->

                <TextView
                    android:id="@+id/link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Bio -->

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.aircandi.ui.widgets.SectionLayout>

            <com.aircandi.ui.widgets.SectionLayout
                android:id="@+id/section_stats"
                style="@style/candi_form_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                aircandi:layoutHeader="@layout/temp_section_header"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.aircandi.ui.widgets.SectionLayout>

            <ViewStub
                android:id="@+id/stub_candi_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/section_candi_places"
                android:layout="@layout/section_user_candi"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <ViewStub
                android:id="@+id/stub_candigrams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/section_candigrams"
                android:layout="@layout/section_user_candi"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="?attr/backgroundProgress"
        android:padding="10dp" />

</RelativeLayout>