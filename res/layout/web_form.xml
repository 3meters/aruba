<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/backgroundCandiInfo" >

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/activity_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include layout="@layout/temp_activity_form_header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_header"
        android:background="?attr/backgroundForm" >

        <include layout="@layout/temp_form_tabs" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:layout_below="@id/form_tabs"
        android:layout_weight="1"
        android:background="?attr/backgroundForm"
        android:fillViewport="true" >

        <ViewFlipper
            android:id="@+id/flipper_form"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:visibility="visible" >

            <!-- Content -->

            <LinearLayout
                android:id="@+id/activity_body"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|top"
                android:orientation="vertical"
                android:padding="5dp" >

                <!-- Title and Content -->

                <LinearLayout
                    android:id="@+id/activity_body"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/txt_uri"
                        style="@style/edittext_form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:hint="@string/post_uri_hint"
                        android:inputType="textUri"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/btn_link_builder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:maxWidth="50dp"
                        android:minWidth="50dp"
                        android:onClick="onLinkBuilderClick"
                        android:src="@drawable/icon_bookmarks" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txt_title"
                    style="@style/edittext_form"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/post_title_hint" />

                <EditText
                    android:id="@+id/txt_content"
                    style="@style/edittext_form"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/post_content_hint"
                    android:inputType="textMultiLine"
                    android:lines="10" />
            </LinearLayout>

            <!-- Settings -->

            <LinearLayout
                android:id="@+id/panel_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/form_footer"
                android:orientation="vertical"
                android:padding="5dp" >

                <include layout="@layout/temp_settings" />
            </LinearLayout>
        </ViewFlipper>
    </ScrollView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="@style/activity_footer_form"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_save_post"
            style="@style/btn_form"
            android:onClick="onSaveButtonClick"
            android:text="@string/post_save_button" />

        <Button
            android:id="@+id/btn_delete_post"
            style="@style/btn_form"
            android:onClick="onDeleteButtonClick"
            android:text="@string/post_delete_button" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/btn_form"
            android:onClick="onCancelButtonClick"
            android:text="@string/post_cancel_button" />
    </LinearLayout>

</RelativeLayout>