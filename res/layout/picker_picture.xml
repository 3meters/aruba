<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/search_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/search_text"
                style="@style/form_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/form_field_height"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="@string/picture_search_query_hint"
                android:imeOptions="actionSearch"
                android:inputType="textAutoCorrect"
                android:singleLine="true"
                android:textAppearance="@style/app_text_appearance_small" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="?attr/backgroundButton"
                android:clickable="true"
                android:maxWidth="40dp"
                android:minWidth="40dp"
                android:onClick="onSearchClick"
                android:scaleType="center"
                android:src="?attr/iconSearch" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_group"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:horizontalSpacing="4dp"
            android:numColumns="auto_fit"
            android:padding="1dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" >
        </GridView>

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/message"
            style="@style/form_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/menu_main" />

</android.support.v4.widget.DrawerLayout>