<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button"
    android:paddingBottom="2dp"
    android:paddingTop="2dp" >

    <com.aircandi.ui.widgets.AirImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/image_medium_small"
        android:layout_height="@dimen/image_medium_small"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        aircandi:brokenDrawable="@drawable/ic_launcher"
        aircandi:layout="@layout/widget_webimageview_framed_thick"
        aircandi:showBusy="true"
        aircandi:sizeHint="@dimen/image_medium_small"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_forward"
        android:layout_toRightOf="@+id/photo"
        android:orientation="vertical" >

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textAppearance="@style/app_text_appearance_medium_accent" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/name"
            style="?attr/candiListTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_title_short"
            android:textColor="?attr/textColor" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/subtitle"
            style="@style/candi_list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_subtitle"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_forward"
        android:layout_width="6dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:paddingRight="0dp"
        android:scaleType="fitXY"
        android:src="?attr/iconForward" />

</RelativeLayout>