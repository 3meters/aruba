<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi" >

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:maxHeight="30dp"
        android:minHeight="30dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_main"
        style="@style/app_picture_framed"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/placeholder_logo_bw" />

    <ImageView
        android:id="@+id/image_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_main"
        android:layout_alignRight="@+id/image_main"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        aircandi:maxHeight="60dp"
        aircandi:maxWidth="60dp"
        android:adjustViewBounds="true"
        android:gravity="bottom|right"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_zoom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/image_main"
        android:layout_alignRight="@+id/image_main"
        android:src="@drawable/ic_zoom_light"
        android:visibility="gone" />

</merge>