<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:layout_centerInParent="true"
        aircandi:layout="@layout/widget_webimageview_framed_thick"
        aircandi:showBusy="true"
        aircandi:sizeHint="@dimen/image_medium"
        android:background="@drawable/selector_image"
        android:clickable="true"
        android:onClick="onCandiClick"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/badge_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_alignTop="@+id/image"
        android:layout_alignRight="@+id/image"
        android:gravity="top|right"
        android:text="@string/dummy_number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent_blue"
        android:visibility="visible" />

    <TextView
        android:id="@+id/badge_lower"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="0dp"
        android:layout_alignBottom="@+id/image"
        android:layout_alignRight="@+id/image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent_blue"
        android:visibility="visible" />
    
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="6dp"
        android:layout_alignTop="@+id/image"
        android:layout_alignRight="@+id/image"
        android:src="@drawable/img_play_store_arrow"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAppearance="@style/app_text_appearance_small"
        android:visibility="visible" />

</RelativeLayout>