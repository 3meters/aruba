<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_frame"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@drawable/abs__item_background_holo_dark"
    android:clickable="true"
    android:clipToPadding="false"
    android:gravity="center"
    android:minWidth="@dimen/action_button_min_width"
    tools:ignore="Overdraw" >

    <!-- textview is a hack to force the action bar button to the height we want -->
    <com.aircandi.ui.widgets.AirTextView
        style="@style/actionbar_beacons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:layout_gravity="center"
        android:focusable="false"
        android:visibility="invisible"
        android:gravity="center" />

    <View
        android:id="@+id/accuracy_indicator"
        android:layout_width="35dp"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:layout_gravity="center"
        android:background="@drawable/bg_accuracy_indicator" />

    <View
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_accuracy_center" />

    <ImageView
        android:id="@+id/refresh_image"
        style="@style/actionbar_beacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="?attr/iconReload" />

    <ProgressBar
        android:id="@+id/refresh_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:focusable="true"
        android:visibility="gone" />

</FrameLayout>