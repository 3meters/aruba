<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout
		android:id="@+id/AppHeader"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true">
		<include
			layout="@layout/temp_application_header" />
	</LinearLayout>
	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:fillViewport="true"
		android:layout_below="@id/AppHeader"
		android:layout_above="@+id/Photo_Footer">
		<LinearLayout
			android:id="@+id/AppBody"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:orientation="vertical"
			android:padding="15dp"
			android:gravity="center_vertical|top">
			<EditText
				android:id="@+id/PhotoTitle"
				android:layout_height="wrap_content"
				android:hint="Title"
				android:layout_width="fill_parent"
				style="@style/Form_Input" />
			<EditText
				android:id="@+id/PhotoDescription"
				android:layout_height="wrap_content"
				android:hint="Comment"
				android:layout_width="fill_parent"
				style="@style/Form_Input"
				android:lines="3"
				android:gravity="top" />
			<Spinner
				android:id="@+id/PhotoTopic"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"
				android:visibility="gone"
				android:prompt="@string/spinner_photo_topic_prompt" />
			<CheckBox
				android:id="@+id/Locked"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/TopicLocked"></CheckBox>
			<LinearLayout
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:layout_height="wrap_content"
				android:paddingTop="5dp"
				android:paddingLeft="3dp"
				android:gravity="left">
				<Button
					android:id="@+id/AddPhotoButton"
					android:textSize="@dimen/menuitem_text"
					android:text="Add\r\nPhoto"
					android:onClick="onAddPhotoButtonClick"
					android:textColor="#ffffffff"
					android:layout_width="wrap_content"
					android:width="80dp"
					android:gravity="center"
					android:height="80dp"
					android:background="@drawable/button_selector"
					android:clickable="true"
					android:layout_height="wrap_content" />
				<Button
					android:id="@+id/ClearPhotoButton"
					android:textSize="@dimen/menuitem_text"
					android:text="Clear\r\nPhoto"
					android:textColor="#ffffffff"
					android:layout_width="wrap_content"
					android:width="80dp"
					android:gravity="center"
					android:height="80dp"
					android:background="@drawable/button_selector"
					android:clickable="true"
					android:onClick="onClearPhotoButtonClick"
					android:visibility="invisible"
					android:layout_height="wrap_content" />
				<ImageView
					android:id="@+id/PhotoThumbnail"
					android:layout_gravity="top"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
			android:focusable="true"
			android:focusableInTouchMode="true"
					android:maxWidth="150dp"
					android:layout_marginLeft="10dp"
					android:layout_weight="0"
					android:padding="5dp"
					android:visibility="gone"
					android:background="#cfff"
					android:adjustViewBounds="true"
					android:scaleType="centerInside" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:gravity="center_horizontal"
		android:id="@+id/Photo_Footer"
		android:padding="10dp">
		<Button
			android:layout_marginTop="5dp"
			android:textSize="@dimen/menuitem_text"
			android:layout_marginRight="5dp"
			android:layout_width="wrap_content"
			android:text="Save"
			android:id="@+id/SaveButton"
			android:onClick="onSaveButtonClick"
			android:textColor="#ffffffff"
			android:width="80dp"
			android:gravity="center"
			android:height="72dp"
			android:background="@drawable/button_selector"
			android:layout_height="wrap_content"
			android:clickable="true"></Button>
		<Button
			android:layout_marginTop="5dp"
			android:textSize="@dimen/menuitem_text"
			android:layout_marginRight="5dp"
			android:layout_width="wrap_content"
			android:text="Delete"
			android:id="@+id/DeleteButton"
			android:onClick="onDeleteButtonClick"
			android:textColor="#ffffffff"
			android:width="80dp"
			android:gravity="center"
			android:height="72dp"
			android:visibility="gone"
			android:background="@drawable/button_selector"
			android:layout_height="wrap_content"
			android:clickable="true"></Button>
		<Button
			android:layout_marginTop="5dp"
			android:textSize="@dimen/menuitem_text"
			android:layout_marginRight="5dp"
			android:layout_width="wrap_content"
			android:text="Cancel"
			android:id="@+id/CancelButton"
			android:onClick="onCancelButtonClick"
			android:textColor="#ffffffff"
			android:width="80dp"
			android:gravity="center"
			android:height="72dp"
			android:background="@drawable/button_selector"
			android:layout_height="wrap_content"
			android:clickable="true"></Button>
	</LinearLayout>
</RelativeLayout>