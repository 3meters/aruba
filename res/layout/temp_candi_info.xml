<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.proxibase.aircandi"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/info_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?attr/backgroundCandiInfo" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fillViewport="true" >

            <RelativeLayout
                android:id="@+id/group_candi_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/button_nooutline_selector"
                android:onClick="onCandiInfoClick"
                android:paddingBottom="10dp" >

                <RelativeLayout
                    android:id="@+id/group_controls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical" >

                    <com.proxibase.aircandi.widgets.WebImageView
                        android:id="@+id/image_public"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                    aircandi:maxHeight="80dp"
                    aircandi:maxWidth="80dp"
                        
                        android:paddingTop="5dp" />

                    <ImageView
                        android:id="@+id/image_public_reflection"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_public"
                        android:layout_gravity="top"
                        android:adjustViewBounds="true"
                        android:maxWidth="80dp"
                        android:scaleType="centerInside"
                        android:width="80dp" />

                    <Button
                        android:id="@+id/button_comments"
                        style="@style/comments_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_public"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:onClick="onCommentsClick"
                        android:text="0\nComments" />

                    <com.proxibase.aircandi.widgets.AuthorBlock
                        android:id="@+id/block_author"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button_comments"
                        aircandi:layout="@layout/temp_user_info_stacked"
                        android:paddingLeft="3dp"
                        android:paddingTop="5dp" />
                    
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/group_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/image_forward"
                    android:layout_toRightOf="@+id/group_controls"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/candi_info_title"
                        style="@style/candi_info_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/candi_info_subtitle"
                        style="@style/candi_info_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/candi_info_description"
                        style="@style/candi_info_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="30dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_forward"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="3dp"
                    android:scaleType="fitXY"
                    android:src="?attr/imageForwardInfo" />
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/slider_wrapper_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible" >

        <SlidingDrawer
            android:id="@+id/slide_actions_info"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:content="@+id/candi_info_slider_content"
            android:handle="@+id/candi_info_slider_handle" >

            <LinearLayout
                android:id="@+id/candi_info_slider_handle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="30dp" >

                <ImageButton
                    style="@style/candi_info_slider_handle"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/candi_info_slider_content"
                style="@style/candi_info_slider_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="90dp" >
            </RelativeLayout>
        </SlidingDrawer>
    </FrameLayout>

</RelativeLayout>