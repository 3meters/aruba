<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/backgroundCandiInfo" >

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/activity_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include layout="@layout/temp_activity_signin_header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:layout_below="@id/activity_header"
        android:layout_weight="1"
        android:background="?attr/backgroundForm"
        android:fillViewport="true" >

        <!-- Content -->

        <LinearLayout
            android:id="@+id/activity_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|top"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp" >

            <!-- Title and Content -->

            <TextView
                style="@style/txt_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_username" />

            <EditText
                android:id="@+id/txt_username"
                style="@style/edittext_form"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/txt_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_password" />

            <EditText
                android:id="@+id/txt_password"
                style="@style/edittext_form"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="@style/activity_footer_form"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" 
>

        <Button
            android:id="@+id/btn_signin"
            style="@style/btn_form"
            android:layout_weight="1"
            android:onClick="onSignInButtonClick"
            android:text="@string/btn_signin" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/btn_form"
            android:layout_weight="1"
            android:onClick="onCancelButtonClick"
            android:text="@string/post_cancel_button" />
    </LinearLayout>

</RelativeLayout>