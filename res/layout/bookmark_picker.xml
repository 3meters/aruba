<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/group_uri"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/text_uri"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="@string/form_uri_hint"
            android:inputType="textUri"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/btn_link_go"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:clickable="true"
            android:maxWidth="40dp"
            android:minWidth="40dp"
            android:onClick="onLinkGoClick"
            android:scaleType="center"
            android:src="?attr/iconGo" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_bookmarks"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/group_uri"
        android:layout_above="@+id/form_footer"
        android:background="?attr/backgroundCandiInfo"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000" >

        <!-- Preview: listitem=@layout/temp_listitem_bookmark -->
    </ListView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="@style/form_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            style="@style/app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:onClick="onCancelButtonClick"
            android:text="@string/form_button_cancel" />
    </LinearLayout>

</RelativeLayout>