<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:id="@+id/item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingRight="10dp" >

    <com.aircandi.ui.widgets.AirImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        aircandi:sizeHint="@dimen/image_small" />

    <RelativeLayout
        android:id="@+id/holder_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/photo"
        android:orientation="horizontal" >

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dummy_name"
            android:textColor="?attr/textColorSecondary"
            android:textStyle="bold" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/separator"
            style="@style/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_name"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/symbol_bullet" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/user_name"
            android:text="@string/dummy_location"
            android:textColor="?attr/textColorSecondary" />
    </RelativeLayout>

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holder_author"
        android:layout_below="@+id/holder_author"
        android:layout_marginBottom="5dp"
        android:text="@string/dummy_description" />

    <LinearLayout
        android:id="@+id/actions_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holder_author"
        android:layout_below="@+id/description"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_datetime"
            android:textColor="?attr/textColorSecondary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holder_author"
        android:layout_below="@+id/actions_holder"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.aircandi.ui.widgets.AirImageView
            android:id="@+id/place_photo"
            android:layout_width="@dimen/image_extra_small"
            android:layout_height="@dimen/image_extra_small"
            android:layout_marginRight="5dp"
            aircandi:showBusy="true"
            aircandi:sizeHint="@dimen/image_extra_small"
            android:background="@drawable/selector_image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.aircandi.ui.widgets.AirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:lineSpacingExtra="-1dp"
                android:text="@string/comment_label_place"
                android:textAppearance="@style/textAppearanceSmall"
                android:textColor="?attr/textColorSecondary" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="-1dp"
                android:gravity="top"
                android:maxLines="2"
                android:text="@string/dummy_title"
                android:textAppearance="@style/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>