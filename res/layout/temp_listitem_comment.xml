<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:id="@+id/item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="?attr/ruleColor" />

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/item_author_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        aircandi:sizeHint="50dp" />

    <RelativeLayout
        android:id="@+id/group_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_author_image"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/item_author_image"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dummy_name"
            android:textAppearance="@style/app_text_appearance_small"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_author_location_separator"
            style="@style/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_author_name"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/symbol_bullet"
            android:textAppearance="@style/app_text_appearance_small" />

        <TextView
            android:id="@+id/item_author_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/item_author_name"
            android:text="@string/dummy_location"
            android:textAppearance="@style/app_text_appearance_small"
            android:textColor="@color/text_secondary" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_author"
        android:layout_below="@+id/group_author"
        android:layout_marginBottom="5dp"
        android:text="@string/dummy_description"
        android:textAppearance="@style/app_text_appearance_small" />

    <LinearLayout
        android:id="@+id/group_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_author"
        android:layout_below="@+id/item_comment"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_datetime"
            android:textAppearance="@style/app_text_appearance_small"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

</RelativeLayout>