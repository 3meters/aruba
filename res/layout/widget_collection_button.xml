<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundButton"
    android:onClick="onChildrenButtonClick" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/image_collection"
        android:layout_width="65dp"
        android:layout_height="65dp"
        aircandi:layout="@layout/widget_webimageview"
        aircandi:maxHeight="65dp"
        aircandi:maxWidth="65dp"
        android:background="@drawable/app_image_selector"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:gravity="bottom|left" >

        <TextView
            android:id="@+id/text_children_count"
            style="@style/app_text_appearance_outlined_small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:text="@string/dummy_number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:gravity="center|right" >

        <ImageView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:scaleType="center"
            android:src="?attr/iconForward" />
    </LinearLayout>

</FrameLayout>