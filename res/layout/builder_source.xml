<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:id="@+id/form_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:orientation="vertical" >

            <!-- User picture -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="2dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <com.aircandi.ui.widgets.WebImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/image_medium"
                    android:layout_height="@dimen/image_medium"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    aircandi:brokenDrawable="@drawable/ic_launcher"
                    aircandi:layout="@layout/widget_webimageview_candi_view"
                    aircandi:sizeHint="@dimen/image_medium"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/button_change_image"
                    style="@style/form_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="0"
                    android:maxWidth="150dp"
                    android:onClick="onChangePictureButtonClick"
                    android:text="@string/form_button_change_picture" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Title and Content -->

            <Spinner
                android:id="@+id/source_type_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:spinnerMode="dialog"
                android:visibility="gone" />

            <EditText
                android:id="@+id/source_label"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_source_caption_hint"
                android:inputType="textCapWords|textNoSuggestions"
                android:textAppearance="@style/app_text_appearance_small" />

            <EditText
                android:id="@+id/source_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_source_id_hint"
                android:inputType="textNoSuggestions"
                android:textAppearance="@style/app_text_appearance_small" />

            <EditText
                android:id="@+id/source_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/form_source_url_hint"
                android:inputType="textMultiLine|textNoSuggestions|textUri"
                android:maxLines="5"
                android:minHeight="@dimen/form_field_height"
                android:minLines="1"
                android:textAppearance="@style/app_text_appearance_small" />

            <Button
                android:id="@+id/button_test"
                style="@style/form_button"
                android:layout_width="@dimen/image_medium"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:onClick="onTestButtonClick"
                android:text="@string/form_button_test" />
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>