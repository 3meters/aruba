<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ListItem_Row"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:paddingLeft="5dp"
	android:paddingTop="1dp"
	android:paddingBottom="10dp"
	android:background="@android:color/transparent"
	android:minHeight="45dp"
	android:shrinkColumns="1"
	android:stretchColumns="1"
	android:clickable="true"
	android:onClick="onItemClick">
	<TableRow>
		<Button
			android:id="@+id/Btn_Egg"
			android:layout_gravity="center_vertical"
			android:layout_height="100dp"
			android:layout_width="120dp"
			android:background="@drawable/button_wp"
			android:text="Claim It!"
			android:drawableTop="@drawable/icon_placeholder_generic"
			android:drawablePadding="0dp"
			android:clickable="true"
			android:onClick="onUserClick" />
		<LinearLayout
			android:orientation="vertical"
			android:paddingLeft="5dp">
			<TextView
				android:id="@+id/Txt_Title"
				android:text="Title"
				android:textSize="@dimen/listitem_title_text"
				android:textColor="@color/listitem_title_text"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" />
			<LinearLayout
				android:id="@+id/Row_EggFound"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/Img_EggFound"
					android:scaleType="fitCenter"
					android:layout_gravity="center_vertical"
					android:layout_height="40dp"
					android:layout_width="40dp"
					android:adjustViewBounds="true"
					android:src="@drawable/icon_placeholder_generic"
					style="@style/ListItem_Icon" />
				<TextView
					android:id="@+id/Txt_EggFound"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Reward" />
			</LinearLayout>
		</LinearLayout>
	</TableRow>
</TableLayout>