<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <!-- Password -->

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:orientation="vertical" >

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/password_old"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:drawableRight="?attr/iconClear"
                android:hint="@string/form_label_password_old"
                android:inputType="textPassword" />

            <com.aircandi.ui.widgets.AirCheckBox
                android:id="@+id/chk_unmask_old"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:text="@string/form_label_password_unmask"
                android:textAppearance="?android:attr/textAppearance" />

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:drawableRight="?attr/iconClear"
                android:hint="@string/form_label_password"
                android:inputType="textPassword" />

            <com.aircandi.ui.widgets.AirCheckBox
                android:id="@+id/chk_unmask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:text="@string/form_label_password_unmask"
                android:textAppearance="?android:attr/textAppearance" />
        </LinearLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>