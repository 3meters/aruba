<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onCheckedClick"
    android:padding="5dp" >

    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:id="@+id/holder_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/checked"
        android:background="@drawable/selector_button"
        android:clickable="true"
        android:onClick="onListItemClick"
        android:orientation="horizontal" >

        <com.aircandi.ui.widgets.WebImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            aircandi:brokenDrawable="@drawable/ic_launcher"
            aircandi:layout="@layout/widget_webimageview"
            aircandi:showBusy="true"
            aircandi:sizeHint="@dimen/image_small"
            android:scaleType="centerCrop" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/name"
            style="@style/form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/image_forward"
            android:layout_toRightOf="@+id/photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="?attr/textColor" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/subtitle"
            style="@style/form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toLeftOf="@+id/image_forward"
            android:layout_toRightOf="@+id/photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="@color/text_secondary" />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/description"
            style="@style/form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_toLeftOf="@+id/image_forward"
            android:layout_toRightOf="@+id/photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="@color/text_secondary" />

        <ImageView
            android:id="@+id/image_forward"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:paddingRight="0dp"
            android:scaleType="fitXY"
            android:src="?attr/iconForward" />
    </RelativeLayout>

</RelativeLayout>