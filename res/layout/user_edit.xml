<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundForm" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ViewFlipper
            android:id="@+id/flipper_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:visibility="visible" >

            <!-- Profile -->

            <LinearLayout
                style="@style/form_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|top"
                android:orientation="vertical" >

                <!-- User picture -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <com.aircandi.ui.widgets.AirImageView
                        android:id="@+id/photo"
                        android:layout_width="@dimen/image_medium"
                        android:layout_height="@dimen/image_medium"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0"
                        aircandi:layout="@layout/widget_webimageview_framed"
                        aircandi:sizeHint="@dimen/image_medium"
                        android:scaleType="centerCrop" />

                    <com.aircandi.ui.widgets.AirButton
                        android:id="@+id/button_change_image"
                        style="@style/form_button_floating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="0"
                        android:maxWidth="150dp"
                        android:onClick="onChangePhotoButtonClick"
                        android:text="@string/form_button_change_picture" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Full name -->

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/name"
                    android:drawableRight="?attr/iconClear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:hint="@string/form_label_fullname"
                    android:inputType="textCapWords|textPersonName|textNoSuggestions" />

                <!-- Location -->

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:drawableRight="?attr/iconClear"
                    android:layout_height="@dimen/form_field_height"
                    android:hint="@string/form_label_location"
                    android:inputType="textPostalAddress|textAutoCorrect" />

                <!-- Web link -->

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/web_uri"
                    android:drawableRight="?attr/iconClear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:hint="@string/form_label_link"
                    android:inputType="textUri" />

                <!-- Bio -->

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/form_label_bio"
                    android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
                    android:minLines="5" />
            </LinearLayout>

            <!-- Account -->

            <LinearLayout
                style="@style/form_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|top"
                android:orientation="vertical" >

                <com.aircandi.ui.widgets.AirEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginBottom="15dp"
                    android:drawableRight="?attr/iconClear"
                    android:hint="@string/form_label_email"
                    android:inputType="textEmailAddress" />

                <com.aircandi.ui.widgets.AirButton
                    android:id="@+id/button_change_password"
                    style="@style/form_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:onClick="onChangePasswordButtonClick"
                    android:text="@string/form_button_change_password" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="?attr/ruleColor" />

                <CheckBox
                    android:id="@+id/chk_do_not_track"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:text="@string/form_label_do_not_track" />

                <com.aircandi.ui.widgets.AirTextView
                    android:id="@+id/do_not_track_hint"
                    style="@style/form_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edit_hint" />

            </LinearLayout>
        </ViewFlipper>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>