<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/candi_user_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        aircandi:layout="@layout/widget_webimageview_framed"
        aircandi:sizeHint="100dp"
        android:background="@drawable/app_image_selector"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <com.aircandi.ui.widgets.TextViewEllipsizing
        android:id="@+id/candi_user_fullname"
        style="@style/candi_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="@string/dummy_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables" >

        <TextView
            android:id="@+id/candi_user_timesince"
            style="@style/candi_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:lines="1"
            android:text="@string/dummy_timesince" />

        <ImageView
            android:id="@+id/image_locked"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:scaleType="fitCenter"
            android:src="?attr/iconLocked"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>