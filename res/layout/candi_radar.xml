<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/form_footer"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/retry_dialog"
            style="@style/dialog_radar_connect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/form_footer"
            android:gravity="center"
            android:padding="25dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/retry_message"
                style="@style/dialog_radar_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="15dp" />

            <LinearLayout
                android:id="@+id/group_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/retry_message"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_retry"
                    style="@style/actionbar_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/dialog_network_retry_button" />

                <Button
                    android:id="@+id/button_cancel"
                    style="@style/actionbar_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/dialog_network_cancel_button" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/wifi_enabled_checkbox"
                style="@style/app_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_buttons"
                android:layout_centerHorizontal="true"
                android:text="@string/dialog_network_enable_wifi_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/empty_dialog"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/form_footer"
            android:gravity="center"
            android:padding="25dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/dummy_description" />
        </RelativeLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scrollbars="none"
            android:visibility="invisible" />

        <org.anddev.andengine.opengl.view.RenderSurfaceView
            android:id="@+id/view_rendersurface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true" />

        <RelativeLayout
            android:id="@+id/button_layer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <Button
                android:id="@+id/button_new"
                style="@style/app_button_square"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"
                android:height="65dp"
                android:onClick="onNewCandiButtonClick"
                android:padding="3dp"
                android:text="@string/radar_button_new"
                android:width="65dp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/debug_wrapper_radar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:visibility="gone" >

        <SlidingDrawer
            android:id="@+id/debug_drawer_radar"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:content="@+id/debug_slider_content"
            android:handle="@+id/debug_slider_handle"
            tools:ignore="UselessParent" >

            <LinearLayout
                android:id="@+id/debug_slider_handle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="30dp" >

                <ImageButton
                    style="@style/debug_slider_handle"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/debug_slider_content"
                style="@style/debug_slider_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="0dp" >

                <RelativeLayout
                    android:id="@+id/debug_section_one"
                    style="@style/debug_slider_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/debug_section_two"
                    style="@style/debug_slider_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >
                </RelativeLayout>
            </LinearLayout>
        </SlidingDrawer>
    </FrameLayout>

    <!-- Footer -->

    <RelativeLayout
        android:id="@+id/form_footer"
        style="?attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="?attr/ruleColor" />

        <LinearLayout
            android:id="@+id/button_new"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:onClick="onNewCandiButtonClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="?attr/iconNewCandi"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:text="@string/radar_button_new" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_help"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onHelpButtonClick"
            android:src="?attr/iconHelp"
            android:text="@string/radar_button_help" />
    </RelativeLayout>

</RelativeLayout>