<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:id="@+id/candi_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <!-- Body -->

    <com.aircandi.ui.widgets.BounceScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="?attr/backgroundCandi"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/candi_view_holder"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp" >

                <com.aircandi.ui.widgets.CandiView
                    android:id="@+id/candi_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    aircandi:layout="@layout/widget_candi_view" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/body_holder"
                style="@style/form_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/candi_view_holder"
                android:orientation="vertical" >

                <include
                    android:id="@+id/candi_form_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    layout="@layout/widget_candi_header_place" />

                <com.aircandi.ui.widgets.SectionLayout
                    android:id="@+id/section_layout_switchboard"
                    style="@style/candi_form_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    aircandi:headerTitle="@string/candi_section_switchboard_place"
                    aircandi:layoutHeader="@layout/temp_section_header"
                    android:orientation="vertical" >

                    <com.aircandi.ui.widgets.FlowLayout
                        android:id="@+id/flow_switchboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.aircandi.ui.widgets.SectionLayout>

                <ViewStub
                    android:id="@+id/stub_candi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inflatedId="@+id/section_candi"
                    android:layout="@layout/section_candi"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <Button
                    android:id="@+id/button_new_candigram"
                    style="@style/form_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onNewCandigramButtonClick"
                    android:text="@string/form_button_new_candigram" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/authoring_holder"
                style="@style/form_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/body_holder"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/user_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/user_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>