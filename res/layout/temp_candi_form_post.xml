<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/candi_form"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- Body -->

    <com.aircandi.widgets.BounceScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/form_footer"
        android:layout_alignParentTop="true"
        android:background="?attr/backgroundCandi"
        android:fillViewport="true"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.aircandi.widgets.UserView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    aircandi:layout="@layout/widget_user_view_large_image"
                    android:minWidth="80dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="false"
                    android:orientation="vertical" >

                    <include
                        android:id="@+id/candi_form_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        layout="@layout/widget_candi_header_compact" />

                    <com.aircandi.widgets.SectionLayout
                        android:id="@+id/section_description"
                        style="@style/candi_form_section"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        aircandi:layoutHeader="@layout/temp_section_header"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/candi_form_description"
                            style="@style/candi_form_description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_description"
                            android:visibility="visible" />
                    </com.aircandi.widgets.SectionLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.aircandi.widgets.BounceScrollView>

    <!-- Footer -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_above="@+id/form_footer"
        android:background="?attr/ruleColor" />

    <LinearLayout
        android:id="@+id/form_footer"
        style="?attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_comment"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNewCommentButtonClick"
            android:text="@string/candi_button_comment" />

        <LinearLayout
            android:id="@+id/button_new"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onAddCandiButtonClick"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="?attr/iconNewCandi"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:text="@string/candi_button_new"
                android:textColor="?attr/textColorBars" />
        </LinearLayout>

        <Button
            android:id="@+id/button_edit"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onEditCandiButtonClick"
            android:text="@string/candi_button_edit" />

        <Button
            android:id="@+id/button_move"
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onMoveCandiButtonClick"
            android:text="@string/candi_button_move" />
    </LinearLayout>

</RelativeLayout>