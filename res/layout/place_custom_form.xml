<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:clickable="true" >

    <!-- Content -->

    <TextView
        android:id="@+id/form_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/abs__alert_dialog_title_height"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Custom place"
        android:textColor="@color/abs__holo_blue_light"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/form_header"
        android:background="@color/abs__holo_blue_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/form_header"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- Public Image -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp" >

            <com.aircandi.widgets.WebImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                aircandi:layout="@layout/widget_webimageview_framed"
                android:minWidth="80dp"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btn_change_public_image"
                style="@style/actionbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@+id/image"
                android:onClick="onChangePictureButtonClick"
                android:text="@string/form_button_change_picture" />
        </RelativeLayout>

        <!-- Title and Content -->

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0"
            android:hint="@string/form_place_title_hint"
            android:inputType="textAutoCorrect"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/sub_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:spinnerMode="dropdown"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/form_footer"
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCancelCustomButtonClick"
            android:text="@string/form_button_cancel" />
        <Button
            style="@style/actionbar_button_borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onAddCustomButtonClick"
            android:text="@string/form_button_add" />

        </LinearLayout>

</RelativeLayout>