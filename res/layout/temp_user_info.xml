<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.proxibase.aircandi.widgets.WebImageView
        android:id="@+id/image_user_picture"
        style="@style/app_user_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:src="@drawable/jaymassena" />

    <TextView
        android:id="@+id/text_user_fullname"
        style="@style/app_user_fullname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_user_picture"
        android:paddingTop="5dp"
        android:gravity="bottom"
        android:text="Jay Massena" />

    <TextView
        android:id="@+id/text_user_timesince"
        style="@style/app_user_timesince"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_user_picture"
        android:layout_below="@+id/text_user_fullname"
        android:gravity="top"
        android:text="10 hours ago" />

</RelativeLayout>