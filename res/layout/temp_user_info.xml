<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.proxibase.aircandi"
    android:layout_width="wrap_content"
    android:layout_height="30dp" >

    <com.proxibase.aircandi.widgets.WebImageView
        android:id="@+id/image_user_picture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        aircandi:maxHeight="30dp"
        aircandi:maxWidth="30dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_user_fullname"
        style="@style/app_user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user_picture"
        android:layout_alignTop="@+id/image_user_picture"
        android:gravity="bottom"
        android:text="@string/dummy_name" />

    <TextView
        android:id="@+id/text_user_timesince"
        style="@style/app_user_timesince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user_picture"
        android:layout_alignBottom="@+id/image_user_picture"
        android:layout_marginRight="4dp"
        android:text="@string/dummy_timesince" />

    <ImageView
        android:id="@+id/image_locked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/image_user_picture"
        android:layout_toRightOf="@+id/text_user_timesince"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:scaleType="fitCenter"
        android:src="?attr/iconLocked"
        android:visibility="visible" />

</RelativeLayout>