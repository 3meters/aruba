<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundForm" >

    <com.aircandi.ui.widgets.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <!-- Content -->

        <LinearLayout
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|top"
            android:orientation="vertical" >

            <!-- Photo -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="0" >

                <com.aircandi.ui.widgets.WebImageView
                    android:id="@+id/image_picture"
                    android:layout_width="@dimen/image_medium"
                    android:layout_height="@dimen/image_medium"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    aircandi:layout="@layout/widget_webimageview_framed"
                    aircandi:sizeHint="@dimen/image_medium"
                    aircandi:brokenDrawable="@drawable/ic_launcher"
                    android:clickable="true"
                    android:minWidth="@dimen/image_medium"
                    android:onClick="onChangePictureButtonClick"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/button_change_image"
                    style="@style/form_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:onClick="onChangePictureButtonClick"
                    android:text="@string/form_button_change_picture" />
            </LinearLayout>

            <!-- Title and Content -->
            
            <Spinner
                android:id="@+id/type_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:spinnerMode="dialog"
                android:visibility="gone" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_source_caption_hint"
                android:inputType="textCapWords|textNoSuggestions"
                android:textAppearance="@style/app_text_appearance_small" />

            <EditText
                android:id="@+id/app_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:hint="@string/form_source_id_hint"
                android:inputType="textNoSuggestions"
                android:textAppearance="@style/app_text_appearance_small" />

            <EditText
                android:id="@+id/app_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/form_source_url_hint"
                android:inputType="textMultiLine|textNoSuggestions|textUri"
                android:maxLines="5"
                android:minHeight="@dimen/form_field_height"
                android:minLines="1"
                android:textAppearance="@style/app_text_appearance_small" />

            <Button
                android:id="@+id/button_test"
                style="@style/form_button"
                android:layout_width="@dimen/image_medium"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:onClick="onTestButtonClick"
                android:text="@string/form_button_test" />


            <LinearLayout
                android:id="@+id/authoring_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/created_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.aircandi.ui.widgets.UserView
                        android:id="@+id/edited_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        aircandi:layout="@layout/widget_user_view_detailed"
                        android:background="?attr/backgroundButton"
                        android:clickable="true"
                        android:onClick="onUserClick" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </com.aircandi.ui.widgets.BounceScrollView>

</RelativeLayout>