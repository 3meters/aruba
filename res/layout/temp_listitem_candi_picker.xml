<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.proxibase.aircandi"
    android:id="@+id/item_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_nooutline_selector"
    android:clickable="true"
    android:onClick="onListItemClick" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="?attr/ruleColor" />

    <com.proxibase.aircandi.widgets.WebImageView
        android:id="@+id/item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        aircandi:animation="@anim/fade_in_medium"
        aircandi:maxHeight="60dp"
        aircandi:maxWidth="60dp" />

    <ImageView
        android:id="@+id/item_image_collection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/item_image"
        android:layout_alignRight="@+id/item_image"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        aircandi:maxHeight="60dp"
        aircandi:maxWidth="60dp"      
        android:visibility="visible"   
        android:src="@drawable/ic_collection_250" />
    
    <com.proxibase.aircandi.widgets.TextViewEllipsizing
        android:id="@+id/item_title"
        style="@style/bookmark_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/item_image" />

    <com.proxibase.aircandi.widgets.TextViewEllipsizing
        android:id="@+id/item_description"
        style="@style/bookmark_list_uri"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_toRightOf="@+id/item_image"
        android:paddingBottom="3dp" />

</RelativeLayout>