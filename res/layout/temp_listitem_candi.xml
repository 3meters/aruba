<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:id="@+id/item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onListItemClick"
    android:paddingBottom="2dp"
    android:paddingTop="2dp" >

    <com.aircandi.ui.widgets.WebImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        aircandi:layout="@layout/widget_webimageview"
        aircandi:sizeHint="@dimen/image_medium" />

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/name"
        style="?attr/candiListTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/photo" />

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/subtitle"
        style="@style/candi_list_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/name"
        android:layout_toLeftOf="@+id/image_forward"
        android:layout_toRightOf="@id/photo" />

    <com.aircandi.ui.widgets.TextViewEllipsizing
        android:id="@+id/description"
        style="@style/candi_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/subtitle"
        android:layout_toLeftOf="@+id/image_forward"
        android:layout_toRightOf="@id/photo" />

    <LinearLayout
        android:id="@+id/holder_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/description"
        android:layout_toLeftOf="@+id/image_forward"
        android:layout_toRightOf="@+id/photo"
        android:orientation="vertical" >

        <com.aircandi.ui.widgets.AirButton
            android:id="@+id/button_comments"
            style="@style/form_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="left"
            android:onClick="onCommentsClick"
            android:paddingTop="5dp"
            android:text="@string/dummy_comments" />

        <com.aircandi.ui.widgets.UserView
            android:id="@+id/creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            aircandi:layout="@layout/widget_user_view_text_only" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_forward"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="3dp"
        android:scaleType="fitXY"
        android:src="?attr/iconForward" />

</RelativeLayout>