<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ListItem_Row"
	style="@style/ListItem_Row"
	android:stretchColumns="1">
	<TableRow>
		<ImageView
			android:id="@+id/ListItem_Icon"
			android:scaleType="fitCenter"
			android:layout_gravity="center_vertical"
			android:layout_height="60dp"
			android:layout_width="60dp"
			android:adjustViewBounds="true"
			android:src="@drawable/icon_placeholder_generic"
			style="@style/ListItem_Icon" />
		<LinearLayout
			android:orientation="vertical"
			android:paddingLeft="5dp">
			<TextView
				android:id="@+id/ListItem_Title"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ListItem_Title" />
			<TextView
				android:id="@+id/ListItem_Body"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ListItem_Body" />
		</LinearLayout>
	</TableRow>
</TableLayout>