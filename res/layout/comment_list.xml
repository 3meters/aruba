<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Body -->

    <com.aircandi.ui.widgets.BounceListView
        android:id="@+id/list_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="?attr/backgroundCandi"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000" />

    <Button
        android:id="@+id/button_new_comment"
        style="@style/form_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="onNewCommentButtonClick"
        android:text="@string/candi_button_comment_first" 
        android:visibility="gone"/>

</RelativeLayout>