<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15sp"
        android:textAppearance="@style/app_text_appearance_large"
        android:textColor="@color/accent_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/name"
        android:background="@color/accent_blue" />
    
    <LinearLayout
        android:id="@+id/group_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name" 
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <com.aircandi.ui.widgets.AirEditText
            android:id="@+id/uri"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="@string/form_uri_hint"
            android:inputType="textUri"
            android:singleLine="true"
            android:textAppearance="@style/app_text_appearance_small" />

        <com.aircandi.ui.widgets.AirButton
            android:id="@+id/button_test"
            style="@style/form_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="onLinkTestButtonClick"
            android:text="@string/form_button_test_link" />
    </LinearLayout>

    <com.aircandi.ui.widgets.BounceListView
        android:id="@+id/form_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/form_footer"
        android:layout_below="@+id/group_uri" 
        >

        <!-- Preview: listitem=@layout/temp_listitem_bookmark -->
    </com.aircandi.ui.widgets.BounceListView>

    <!-- Footer -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/form_footer"
        android:background="?attr/ruleColor" />

    <LinearLayout
        android:id="@+id/form_footer"
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <com.aircandi.ui.widgets.AirButton
            android:id="@+id/button_cancel"
            style="@style/form_button_borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="150dp"
            android:onClick="onCancelButtonClick"
            android:text="@string/form_button_cancel" />

        <com.aircandi.ui.widgets.AirButton
            android:id="@+id/button_ok"
            style="@style/form_button_borderless"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:maxWidth="150dp"
            android:onClick="onOkButtonClick"
            android:text="@string/form_button_ok" />
    </LinearLayout>

</RelativeLayout>