<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="5dp" >

    <com.aircandi.ui.widgets.AirImageView
        android:id="@+id/photo_user"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        aircandi:layout="@layout/widget_webimageview_candi_view"
        aircandi:sizeHint="@dimen/image_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/name"
            style="?attr/candiListTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_title_short" 
            />

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/subtitle"
            style="@style/candi_list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="8dp"
            android:text="@string/dummy_subtitle"
            android:textColor="@color/text_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical" >

            <com.aircandi.ui.widgets.AirImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/image_medium"
                android:layout_height="@dimen/image_medium"
                android:layout_marginRight="10dp"
                aircandi:layout="@layout/widget_webimageview_candi_view"
                aircandi:sizeHint="@dimen/image_medium" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/description"
                style="@style/candi_list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/dummy_description"
                android:visibility="gone" />
        </LinearLayout>

        <com.aircandi.ui.widgets.AirTextView
            android:id="@+id/timesince"
            style="@style/candi_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_timesince"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_forward"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:paddingRight="3dp"
        android:scaleType="fitXY"
        android:src="?attr/iconForward" />

</LinearLayout>