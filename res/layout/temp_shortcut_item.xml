<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi" >

    <com.aircandi.ui.widgets.AirImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/image_medium_small"
        android:layout_height="@dimen/image_medium_small"
        aircandi:layout="@layout/widget_webimageview_framed"
        aircandi:showBusy="true"
        aircandi:sizeHint="@dimen/image_medium_small"
        android:background="@drawable/selector_image"
        android:clickable="true"
        android:onClick="onShortcutClick"
        android:scaleType="centerCrop" />

    <com.aircandi.ui.widgets.AirTextView
        android:id="@+id/name"
        android:layout_width="@dimen/image_medium_small"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/dummy_label"
        android:textAppearance="@style/textAppearanceExtraSmall"
        android:visibility="visible" />

</merge>