<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aircandi="http://schemas.android.com/apk/res/com.aircandi.beta" >

    <TextView
        android:id="@+id/candi_form_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="3dp"
        android:text="@string/dummy_address" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <com.aircandi.ui.widgets.ComboButton
            android:id="@+id/button_tune"
            style="@style/form_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            aircandi:drawableScale="@dimen/combo_button_drawable_large_scale"
            android:drawablePadding="5dp"
            android:drawableTop="?attr/iconTune"
            android:layout_marginRight="3dp"
            android:onClick="onTuneButtonClick"
            android:text="@string/candi_button_tune" />

        <com.aircandi.ui.widgets.ComboButton
            android:id="@+id/button_call"
            style="@style/form_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            aircandi:drawableScale="@dimen/combo_button_drawable_scale"
            android:drawablePadding="5dp"
            android:layout_marginRight="3dp"
            android:drawableTop="?attr/iconCall"
            android:onClick="onCallButtonClick"
            android:text="@string/candi_button_call" />

        <com.aircandi.ui.widgets.ComboButton
            android:id="@+id/button_map"
            style="@style/form_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            aircandi:drawableScale="@dimen/combo_button_drawable_scale"
            android:drawablePadding="5dp"
            android:drawableTop="?attr/iconMap"
            android:onClick="onMapButtonClick"
            android:text="@string/candi_button_map" />
    </LinearLayout>

    <com.aircandi.ui.widgets.SectionLayout
        android:id="@+id/section_description"
        style="@style/candi_form_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        aircandi:layoutHeader="@layout/temp_section_header"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/candi_form_description"
            style="@style/candi_form_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_description"
            android:visibility="visible" />
    </com.aircandi.ui.widgets.SectionLayout>

</merge>