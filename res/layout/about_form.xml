<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.BounceScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        style="@style/form_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/holder_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <!-- Title and Content -->

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:src="?attr/logo" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dummy_version" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="@string/dummy_copyright" />

            <com.aircandi.ui.widgets.AirButton
                android:id="@+id/button_terms"
                style="@style/form_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_button_height"
                android:layout_marginBottom="8dp"
                android:minWidth="200dp"
                android:onClick="onTermsButtonClick"
                android:text="@string/form_button_terms" />

            <com.aircandi.ui.widgets.AirButton
                android:id="@+id/button_legal"
                style="@style/form_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_button_height"
                android:layout_marginBottom="8dp"
                android:onClick="onLegalButtonClick"
                android:text="@string/form_button_legal" />

            <com.aircandi.ui.widgets.AirButton
                android:id="@+id/button_privacy"
                style="@style/form_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_button_height"
                android:onClick="onPrivacyButtonClick"
                android:text="@string/form_button_privacy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/holder_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/holder_body"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:orientation="vertical" >

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/form_label_about_install" />

            <TableLayout
                android:id="@+id/holder_install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_id"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/ruleColor" />

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/ruleColor" />

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/ruleColor" />

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/screen_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

</com.aircandi.ui.widgets.BounceScrollView>